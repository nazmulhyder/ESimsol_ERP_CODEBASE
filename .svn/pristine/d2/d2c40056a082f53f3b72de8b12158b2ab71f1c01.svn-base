<html>

<body>

@model ESimSol.BusinessObjects.Brand
    <div class="menuMainCollectionTable">
        <div class="easyui-panel" title="Brand Configure" style="font-family:Tahoma;text-align:center;  width:100%;height:88%;">
            <fieldset >
                <legend style="font-weight:bold"> Brand Info: </legend>
                <table border="0" cellspacing="2" cellpadding="2" style="font-size:11px; font-weight:bold">
                    <tr>
                        <td style="width:200px; text-align:right;">
                            Brand Code :
                        </td>
                        <td style="width:400px">
                            @Html.TextBoxFor(model => model.BrandCode, new { style = "width: 400px;height:25px;", id = "txtBranCode", disabled = "disabled" })
                        </td>
                    </tr>
                    
                     <tr>
                        <td style="width:200px; text-align:right">
                            Brand Name :
                        </td>
                        <td style="width:400px">
                            @Html.TextBoxFor(model => model.BrandName, new { style = "width: 400px;height:25px;", id = "txtBrandName" })
                        </td>
                    </tr>
                    <tr>
                        <td style="width:200px; text-align:right">
                            Fax :
                        </td>
                        <td style="width:400px">
                            @Html.TextBoxFor(model => model.FaxNo, new { style = "width: 400px;height:25px;", id = "txtFaxNo" })
                        </td>
                    </tr>
                    <tr>
                        <td style="width:200px; text-align:right">
                            Web Address :
                        </td>
                        <td style="width:400px">
                            @Html.TextBoxFor(model => model.WebAddress, new { style = "width: 400px;height:25px;", id = "txtWebAddress" })
                        </td>
                    </tr>

                    <tr>
                        <td style="width:200px; text-align:right">
                            Email :
                        </td>
                        <td style="width:400px">
                            @Html.TextBoxFor(model => model.EmailAddress, new { style = "width: 400px;height:25px;", id = "txtEmailAddress" })
                        </td>
                    </tr>

                    <tr>
                        <td style="width:200px; text-align:right">
                            Brand Short Name :
                        </td>
                        <td style="width:400px">
                            @Html.TextBoxFor(model => model.ShortName, new { style = "width: 400px;height:25px;", id = "txtShortName" })
                        </td>
                    </tr>
                    <tr>
                        <td style="width:200px; text-align:right">
                            Remarks :
                        </td>
                        <td style="width:400px">
                            @Html.TextBoxFor(model => model.Remarks, new { style = "width: 400px;height:25px;", id = "txtRemarks" })
                        </td>
                    </tr>
                </table>
            </fieldset>
        </div>
        <fieldset>
            <legend style="font-weight:bold"> Action : </legend>
            <table border="0" cellspacing="2" cellpadding="2" style="font-size:11px; font-weight:bold">
                <tr>
                    <td style="width:85%; text-align:right"></td>

                    <td style="width:10%;">
                        <a id="btnSave" href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-save" plain="true" onclick="Save()">Save</a>
                    </td>
                    <td style="width:5%;">
                        <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-cancel" plain="true" onclick="Close()">Close</a>
                    </td>
                </tr>
            </table>
        </fieldset>
    </div>
</body>
</html>


<script type="text/javascript">
    var _oBrand=null;
    var _sBaseAddress="";
    var _objBrandName = "";
    var _lBackLink = "";
    $(document).ready(function () {
        //debugger;
        _sBaseAddress =@Html.Raw( new System.Web.Script.Serialization.JavaScriptSerializer().Serialize(HttpContext.Current.Session[SessionInfo.BaseAddress]));
     _oBrand =@Html.Raw(new System.Web.Script.Serialization.JavaScriptSerializer().Serialize(Model));
     _objBrandName = sessionStorage.getItem("BrandHeader");
     _lBackLink = sessionStorage.getItem("BackLink");
     if(_objBrandName=="View Shade Configure")
        {
            document.getElementById('btnSave').style.display = 'none';
            document.getElementById('txtBrandName').disabled= true;
            document.getElementById('txtFaxNo').disabled= true;
            document.getElementById('txtWebAddress').disabled= true;
            document.getElementById('txtEmailAddress').disabled= true;
            document.getElementById('txtShortName').disabled= true;
            document.getElementById('txtRemarks').disabled= true;
            

        }


 });


   function ValidateInput()
    {
       if($("#txtBrandName").val()==null || $("#txtBrandName").val()=="")
        {
            alert("Please Type Brand Name!");
            $('#txtBrandName').focus();
            return false;
       }
       if($("#txtShortName").val()==null || $("#txtShortName").val()=="")
       {
           alert("Please Type Short Name!");
           $('#txtBrandName').focus();
           return false;
       }

        return true;
    }


    function RefreshObject()
    {
        debugger;
        var oBrand= {
                        BrandID : _oBrand.BrandID,
                        BrandName: $("#txtBrandName").val(),
                        BrandCode :_oBrand.BrandCode,
                        WebAddress:$("#txtWebAddress").val(),
                        FaxNo :$("#txtFaxNo").val(),
                        EmailAddress:$("#txtEmailAddress").val(),
                        ShortName :$("#txtShortName").val(),
                        Remarks : $("#txtRemarks").val()
                    };
        return oBrand;
    }

    function Save()
    {
        debugger;
        if(!ValidateInput()) return;
        var oBrand=RefreshObject();
        $.ajax({
            type: "POST",
            dataType: "json",
            url : _sBaseAddress+"/Brand/Save",
            traditional: true,
            data:  JSON.stringify(oBrand),
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                //debugger;
                _oBrand = jQuery.parseJSON(data);
                if (_oBrand.ErrorMessage=="" || _oBrand.ErrorMessage==null) {
                    alert("Data Saved sucessfully");
                    var oBrands = sessionStorage.getItem("Brands");
                    var nIndex = parseInt(sessionStorage.getItem("SelectedRowIndex"));
                    if (oBrands != null) {
                        oBrands = jQuery.parseJSON(oBrands);
                    }
                    else {
                        oBrands = [];
                    }
                    if (nIndex != -1) {
                        oBrands[nIndex] = _oBrand;
                    }
                    else {
                        sessionStorage.setItem("SelectedRowIndex", oBrands.length);
                        oBrands.push(_oBrand);
                    }
                    sessionStorage.setItem("Brands", JSON.stringify(oBrands));
                    window.location.href = _lBackLink;
                }
                else {
                    alert(_oBrand.ErrorMessage);
                }
            },
            error: function (xhr, status, error) {
                alert(error);
            }

        });
    }


    function Close()
    {
        window.location.href = _lBackLink;
    }

    $(document).keydown(function(e) {
    if(e.which == 27)//escape=27
    {
        //debugger;
        window.location.href = _lBackLink;
    }
});
</script>