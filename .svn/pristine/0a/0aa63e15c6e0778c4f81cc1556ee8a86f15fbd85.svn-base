@{
     ViewBag.Title = "Holiday Calendar";
}
@model IEnumerable<ESimSol.BusinessObjects.HolidayCalendar>

    <div id="winHolidayCalendar" class="easyui-window" title="Holiday Calendar" style="width:500px;height:180px;padding:2px;" data-options="modal:true,closed:true,collapsible:false,minimizable:false,maximizable:false,closable:false">
        <div>
            <fieldset>
                <table border="0" cellspacing="2" cellpadding="2" style="font-size:11px; font-weight:bold">
                    <tr>
                        <td style="width:20%; text-align:right">
                            Calendar No :
                        </td>
                        <td style="width:30%">
                            <input type="text" style="width: 100%;" id="txtCalendarNo" disabled="disabled" />
                        </td>
                        <td style="width:20%; text-align:right">
                            Calendar Name :
                        </td>
                        <td style="width:30%">
                            <input type="text" style="width: 100%;" id="txtCalendarName" />
                        </td>
                    </tr>
                    <tr>
                        <td style="width:20%; text-align:right">
                            Start date :
                        </td>
                        <td style="width:30%">
                            <input type="text" style="width:100%;" id="txtStartDate" class="easyui-datebox" data-options="formatter:icsdateformat,parser:icsdateparser"  />
                        </td>

                        <td style="width:20%; text-align:right">
                            End date :
                        </td>
                        <td style="width:30%">
                            <input type="text" style="width:100%;" id="txtEndDate" class="easyui-datebox" data-options="formatter:icsdateformat,parser:icsdateparser" />
                        </td>
                    </tr>
                    <tr>
                        <td style="width:20%; text-align:right">
                            Remarks :
                        </td>
                        <td style="width:80%" colspan="3">
                            <input type="text" style="width: 100%;" id="txtRemarks" />
                        </td>
                    </tr>
                </table>
            </fieldset>
        </div>
        <fieldset style="width:99%; vertical-align:top;">
            <table border="0" cellspacing="2" cellpadding="2" style="font-size:11px; font-weight:bold;">
                <tr>
                    <td style="width:100px;text-align:right"></td>
                    <td style="width:408px;text-align:right;">
                        <a id="btnSave" href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-save" plain="true">Save</a>
                        <a id="btnClose" href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-cancel" plain="true">Cancel</a>
                    </td>
                </tr>
            </table>
        </fieldset>
    </div>
                      
    <div class="menuMainCollectionTable" style="height:100%;width:1015px">
        <table id="tblHolidayCalendars" title="Holiday Calendar List" class="easyui-datagrid" fit="true" fitcolumns="true" rownumbers="true" pagination="true" singleselect="true" autorowheight="false" toolbar="#toolbar">
            <thead>
                <tr>
                    <th field="CalendarNo" width="100">Calendar No</th>
                    <th field="CalendarName" width="100">Calendar Name</th>
                    <th field="StartDateInString" width="100" align="center">Start Date</th>
                    <th field="EndDateInString" width="100" align="center">End Date</th>
                    <th field="TotalHolidays"align="right" width="100">Total Holidays</th>
                    <th field="Remarks" width="100">Remarks</th>
                </tr>
            </thead>
        </table>
        <div id="toolbar">            
            <a id="btnAdd" href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-add" plain="true">Add</a>
            <a id="btnEdit" href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-edit" plain="true">Edit</a>
            <a id="btnView" href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-details" plain="true">View</a>
            <a id="btnDelete" href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-remove" plain="true">Delete</a> 
            <a id="btnHolidayDefine" href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-add" plain="true">Holiday Define</a>       
        </div>
    </div>

<script type="text/javascript">

    $(document).ready(function () {
        var oHolidayCalendars =@Html.Raw( new System.Web.Script.Serialization.JavaScriptSerializer().Serialize(Model));
        var oTempHolidayCalendars = sessionStorage.getItem("HolidayCalendars");
        if (oTempHolidayCalendars != null) {
            oHolidayCalendars = jQuery.parseJSON(oTempHolidayCalendars);
        }
        RefreshList(oHolidayCalendars);
    });

    $('#btnHolidayDefine').click(function () {
        debugger;
        var oHolidayCalendar = $('#tblHolidayCalendars').datagrid('getSelected');
        if (oHolidayCalendar == null || oHolidayCalendar.HolidayCalendarID <= 0) {
            alert("Please select an item from list!");
            return;
        }

        var nSelectedRowIndex = $('#tblHolidayCalendars').datagrid('getRowIndex', oHolidayCalendar);
        var oHolidayCalendars = $('#tblHolidayCalendars').datagrid('getRows');
        sessionStorage.setItem("HolidayCalendar", JSON.stringify(oHolidayCalendar));
        sessionStorage.setItem("SelectedRowIndex", nSelectedRowIndex);
        sessionStorage.setItem("BackLink", window.location.href);
        window.location.href = sessionStorage.getItem('BaseAddress') + "/HolidayCalendar/ViewHolidayDefine?id=" + oHolidayCalendar.HolidayCalendarID;
    });
   
    $('#btnAdd').click(function (e) {
        EnableAllfield();
        var oHolidayCalendars = $('#tblHolidayCalendars').datagrid('getRows');
        sessionStorage.setItem("HolidayCalendars", JSON.stringify(oHolidayCalendars));
        sessionStorage.setItem("SelectedRowIndex", -1);
        $('#tblHolidayCalendars').data('HolidayCalendarID', 0);
        $("#winHolidayCalendar").icsWindow('open', "HolidayCalendar");
        ClearwinHolidayCalendar();
    });

    function ClearwinHolidayCalendar() {
        $('#txtStartDate').datebox('setValue', icsdateformat(new Date()));
        $('#txtEndDate').datebox('setValue', icsdateformat(new Date()));
        $("#txtCalendarNo").val("");
        $("#txtCalendarName").val("");
        $("#txtRemarks").val("");
    }

    function RefreshControl(oHolidayCalendar) {
        $("#txtCalendarNo").val(oHolidayCalendar.CalendarNo);
        $("#txtCalendarName").val(oHolidayCalendar.CalendarName);
        $('#txtStartDate').datebox('setValue', oHolidayCalendar.StartDateInString);
        $('#txtEndDate').datebox('setValue', oHolidayCalendar.EndDateInString);
        $("#txtRemarks").val(oHolidayCalendar.Remarks);
    }

    $('#btnEdit').click(function () {
        var oHolidayCalendar = $('#tblHolidayCalendars').datagrid('getSelected');
        if (oHolidayCalendar == null || oHolidayCalendar.HolidayCalendarID <= 0) {
            alert("Please select an item from list!");
            return;
        }
        $('#tblHolidayCalendars').data('HolidayCalendarID', oHolidayCalendar.HolidayCalendarID);
        var nSelectedRowIndex = $('#tblHolidayCalendars').datagrid('getRowIndex', oHolidayCalendar);
        var oHolidayCalendars = $('#tblHolidayCalendars').datagrid('getRows');
        sessionStorage.setItem("HolidayCalendars", JSON.stringify(oHolidayCalendars));
        sessionStorage.setItem("SelectedRowIndex", nSelectedRowIndex);
        $("#winHolidayCalendar").icsWindow('open', "HolidayCalendar");
        RefreshControl(oHolidayCalendar);
        EnableAllfield();
    });

    $('#btnView').click(function () {
        var oHolidayCalendar = $('#tblHolidayCalendars').datagrid('getSelected');
        if (oHolidayCalendar == null || oHolidayCalendar.HolidayCalendarID <= 0) {
            alert("Please select an item from list!");
            return;
        }
        var nSelectedRowIndex = $('#tblHolidayCalendars').datagrid('getRowIndex', oHolidayCalendar);
        var oHolidayCalendars = $('#tblHolidayCalendars').datagrid('getRows');
        sessionStorage.setItem("HolidayCalendars", JSON.stringify(oHolidayCalendars));
        sessionStorage.setItem("SelectedRowIndex", nSelectedRowIndex);
        $("#winHolidayCalendar").icsWindow('open', "HolidayCalendar");
        RefreshControl(oHolidayCalendar);
        DisableAllfield();
    });

    function RefreshObject() {
        var oHolidayCalendar = {
            HolidayCalendarID: parseInt($('#tblHolidayCalendars').data('HolidayCalendarID')),
            CalendarNo: $("#txtCalendarNo").val(),
            CalendarName: $.trim($("#txtCalendarName").val()),
            StartDate: $('#txtStartDate').datebox('getValue'),
            EndDate: $('#txtEndDate').datebox('getValue'),
            Remarks: $.trim($('#txtRemarks').val())
        }
        return oHolidayCalendar;
    }

    function ValidateInput() {
        if ($.trim($('#txtCalendarName').val()) === null || $.trim($('#txtCalendarName').val()) === "") {
            alert("Press type Calender Name");
            return false;
        }
        return true;
    }

    $('#btnSave').click(function () {
        debugger;;
        if (!ValidateInput()) return;
        var oHolidayCalendar = RefreshObject();
        $.ajax({
            type: "POST",
            dataType: "json",
            url: sessionStorage.getItem('BaseAddress') + "/HolidayCalendar/Save",
            traditional: true,
            data: JSON.stringify(oHolidayCalendar),
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                debugger;
                oHolidayCalendar = jQuery.parseJSON(data);
                if (oHolidayCalendar.ErrorMessage == "" || oHolidayCalendar.ErrorMessage == null) {
                    alert("Data Saved sucessfully");
                    var oHolidayCalendars = sessionStorage.getItem("HolidayCalendars");
                    var nIndex = parseInt(sessionStorage.getItem("SelectedRowIndex"));
                    if (oHolidayCalendars != null) {
                        oHolidayCalendars = jQuery.parseJSON(oHolidayCalendars);
                    }
                    else {
                        oHolidayCalendars = [];
                    }
                    if (nIndex != -1) {
                        oHolidayCalendars[nIndex] = oHolidayCalendar;
                    }
                    else {
                        sessionStorage.setItem("SelectedRowIndex", oHolidayCalendars.length);
                        oHolidayCalendars.push(oHolidayCalendar);
                    }
                    RefreshList(oHolidayCalendars);
                    $("#winHolidayCalendar").icsWindow('close');
                }
                else {
                    alert(oHolidayCalendar.ErrorMessage);
                }
            },
            error: function (xhr, status, error) {
                alert(error);
            }

        });
    });

    function DisableAllfield() {
        $('#txtStartDate').textbox('readonly', true);
        $('#txtEndDate').textbox('readonly', true);
        $('#txtCalendarName').attr('disabled', 'disabled');
        $('#txtRemarks').attr('disabled', 'disabled');
        $("#btnSave").hide();
    }

    function EnableAllfield() {
        $('#txtStartDate').textbox('readonly', false);
        $('#txtEndDate').textbox('readonly', false);
        $('#txtCalendarName').attr('disabled', false);
        $('#txtRemarks').attr('disabled', false);
        $("#btnSave").show();
    }

    $('#btnClose').click(function (e) {
        $("#winHolidayCalendar").icsWindow('close');
    });

    $('#btnDelete').click(function () {
        var oHolidayCalendar = $('#tblHolidayCalendars').datagrid('getSelected');
        if (oHolidayCalendar == null || oHolidayCalendar.HolidayCalendarID <= 0) {
            alert("Please select an item from list!");
            return;
        }

        if (!confirm("Confirm to Delete?")) return;


        var SelectedRowIndex = $('#tblHolidayCalendars').datagrid('getRowIndex', oHolidayCalendar);

        if (oHolidayCalendar.HolidayCalendarID > 0) {
            debugger;
            $.ajax
                ({
                    type: "POST",
                    dataType: "json",
                    url: sessionStorage.getItem('BaseAddress') + "/HolidayCalendar/Delete",
                    data: JSON.stringify(oHolidayCalendar),
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                        debugger;
                        feedbackmessage = jQuery.parseJSON(data);
                        if (feedbackmessage == "Deleted") {
                            alert("Delete sucessfully");
                            $('#tblHolidayCalendars').datagrid('deleteRow', SelectedRowIndex);
                            var oHolidayCalendars = $('#tblHolidayCalendars').datagrid('getRows');
                            sessionStorage.setItem("HolidayCalendars", JSON.stringify(oHolidayCalendars));

                        }
                        else {
                            alert(feedbackmessage);
                        }
                    },
                    error: function (xhr, status, error) {
                        alert(error);
                    }

                });
        }
    });

    function RefreshList(oHolidayCalendars) {
        DynamicRefreshList(oHolidayCalendars, 'tblHolidayCalendars');
        var nSelectedRowIndex = parseInt(sessionStorage.getItem("SelectedRowIndex"));
        if (nSelectedRowIndex != -1) {
            $('#tblHolidayCalendars').datagrid('selectRow', nSelectedRowIndex);
        }
    }
   
</script>
