
 

@model ESimSol.BusinessObjects.Employee
@{
    ViewBag.Title = "Edit Employee";
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
        <div class="PageHeading">
           <table border="0">
                <tr>
                    
                    <td style="width:900px" class="Headline"> Edit Employee</td>
                </tr>
            </table>
        </div>  
        <div class="PageBody" style="overflow:auto">
        <table border="0">
            <tr>
                <td style="width:50px"></td>
                <td style="width:800px">                           
                            <fieldset>
                                <legend style="font-weight:bold"> Employee Info : </legend>
                                <table border="0">
                                    <tr>
                                        <td>Code</td>
                                        <td>:</td>
                                        <td>
                                                <div class="editor-field">
                                                @Html.TextBoxFor(model => model.Code, new { style = "width: 500px;", id = "txtCode", disabled = "disabled"})            
                                                </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Employee Name</td>
                                        <td>:</td>
                                        <td>
                                                <div class="editor-field">
                                                @Html.TextBoxFor(model => model.Name, new { style = "width: 500px;", id = "txtName" })            
                                                </div>
                                        </td>
                                    </tr>
                                    <tr>
                                       <td>Employee Type</td>         
                                        <td>:</td>
                                        <td>
                                            <div class="editor-field">
                                                @Html.DropDownListFor(model => model.EmployeeType, new SelectList(Enum.GetValues(typeof(ICS.Core.Utility.EnumEmployeeType))), new { id = "cboEmployeeType", style = "width: 505px;" })                                                
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                       <td>NickName</td>         
                                        <td>:</td>
                                        <td>
                                            <div class="editor-field">
                                                @Html.TextBoxFor(model => model.NickName, new { style = "width: 500px;", id = "txtNickName" })            
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                       <td>Father Name</td>         
                                        <td>:</td>
                                        <td>
                                            <div class="editor-field">
                                                @Html.TextBoxFor(model => model.FatherName, new { style = "width: 500px;", id = "txtFatherName" })            
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                       <td>Mother Name</td>         
                                        <td>:</td>
                                        <td>
                                            <div class="editor-field">
                                                @Html.TextBoxFor(model => model.MotherName, new { style = "width: 500px;", id = "txtMotherName" })            
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                       <td>Date Of Birth</td>         
                                        <td>:</td>
                                        <td>
                                            <table border="0">
                                                <tr>
                                                    <td style="width:200px">
                                                        <div class="editor-field">
                                                            @Html.TextBox("DateOfBirth", DateTime.Today.ToString("dd MMMM yyyy"), new { style = "width: 150px;", id = "txtBirthDate" })                                                            
                                                        </div>                                                    
                                                    </td>
                                                    <td style="width:100px; text-align:right"> Date Of join :</td>
                                                    <td style="width:200px; text-align:right">
                                                        <div class="editor-field">
                                                            @Html.TextBox("DateOfjoin", DateTime.Today.ToString("dd MMMM yyyy"), new { style = "width: 150px;", id = "txtjoinDate" })                                                                      
                                                        </div>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                    <tr>
                                       <td>Address</td>         
                                        <td>:</td>
                                        <td>
                                            <div class="editor-field">
                                                @Html.TextBoxFor(model => model.Address, new { style = "width: 500px;", id = "txtAddress" })            
                                            </div>
                                        </td>
                                    </tr>

                                    <tr>
                                       <td>Contact No</td>         
                                        <td>:</td>
                                        <td>
                                            <div class="editor-field">
                                                @Html.TextBoxFor(model => model.ContactNo, new { style = "width: 500px;", id = "txtContactNo" })            
                                            </div>
                                        </td>
                                    </tr>

                                    <tr>
                                       <td>Designation</td>         
                                        <td>:</td>
                                        <td>
                                            <div class="editor-field">
                                                @Html.TextBoxFor(model => model.Designation, new { style = "width: 500px;", id = "txtDesignation" })            
                                            </div>
                                        </td>
                                    </tr>

                                    <tr>
                                       <td>Email Address</td>         
                                        <td>:</td>
                                        <td>
                                            <div class="editor-field">
                                                @Html.TextBoxFor(model => model.EmailAddress, new { style = "width: 500px;", id = "txtEmailAddress" })            
                                            </div>
                                        </td>
                                    </tr>
                                     
                                    <tr>
                                       <td>Location</td>         
                                        <td>:</td>
                                        <td>
                                            <div class="editor-field">
                                                @Html.DropDownListFor(model => model.DutyLocation, Model.Locations.Select(x => new SelectListItem() { Text = x.LocationNameCode, Value = x.LocationID.ToString() }), new { id = "cboLocation", style = "width:505px;" })  
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td></td>
                                        <td></td>
                                        <td>
                                            @Html.HiddenFor(model=>model.EmployeeID)
                                            @Html.HiddenFor(model=>model.Code)
                                        </td>
                                    </tr>
                                </table>
                                </fieldset>
                                 <input type="submit" value="Save" id="btnSave" />

                
                    </td>
                <td style="width:50px"></td>
            </tr>
            <tr>
                 <td style="width:50px"></td>
                 <td style="width:800px">
                    <div style="color: red;font-weight:900; margin-top:10px">@TempData["message"]</div>
                 </td>
                 <td style="width:50px"></td>
            </tr>
        </table>     
        </div>
}
        <div class="PageFooter">
<div style="margin-left:20px;margin-right:20px">
    <table>
        <tr>
            <td style="width:500px"></td>            
            <td style="width:400px; text-align:right">
                @Html.ActionLink("Back to Employee List", "RefreshList", "Employee")
            </td>
        </tr>
    </table>
    
</div>
</div>
 
 

<script type="text/javascript">
    $(document).ready(function () {
        //debugger;
        initializeDatepicker();
    });


    $('#txtName').live('keydown', function (e) {
        var keyCode = e.keyCode || e.which;

        if (keyCode == 13) {
            e.preventDefault();
            $('#cboEmployeeType').focus();
            $("#txtName").css("background-color", "white");
            $("#cboEmployeeType").css("background-color", "#E6E6E6");
            return false;
        }

    });

    $('#cboEmployeeType').live('keydown', function (e) {
        var keyCode = e.keyCode || e.which;

        if (keyCode == 13) {
            e.preventDefault();
            $('#txtNickName').focus();
            $("#cboEmployeeType").css("background-color", "white");
            $("#txtNickName").css("background-color", "#E6E6E6");
            return false;
        }

    });


    $('#txtNickName').live('keydown', function (e) {
        var keyCode = e.keyCode || e.which;

        if (keyCode == 13) {
            e.preventDefault();
            $('#txtFatherName').focus();
            $("#txtNickName").css("background-color", "white");
            $("#txtFatherName").css("background-color", "#E6E6E6");
            return false;
        }

    });

    $('#txtFatherName').live('keydown', function (e) {
        var keyCode = e.keyCode || e.which;

        if (keyCode == 13) {
            e.preventDefault();
            $('#txtMotherName').focus();
            $("#txtFatherName").css("background-color", "white");
            $("#txtMotherName").css("background-color", "#E6E6E6");
            return false;
        }

    });


    $('#txtMotherName').live('keydown', function (e) {
        var keyCode = e.keyCode || e.which;

        if (keyCode == 13) {
            e.preventDefault();
            $('#txtBirthDate').focus();
            $("#txtMotherName").css("background-color", "white");
            $("#txtBirthDate").css("background-color", "#E6E6E6");
            return false;
        }

    });

    $('#txtBirthDate').live('keydown', function (e) {
        var keyCode = e.keyCode || e.which;

        if (keyCode == 13) {
            e.preventDefault();
            $('#txtjoinDate').focus();
            $("#txtBirthDate").css("background-color", "white");
            $("#txtjoinDate").css("background-color", "#E6E6E6");
            return false;
        }

    });


    $('#txtjoinDate').live('keydown', function (e) {
        var keyCode = e.keyCode || e.which;

        if (keyCode == 13) {
            e.preventDefault();
            $('#txtAddress').focus();
            $("#txtjoinDate").css("background-color", "white");
            $("#txtAddress").css("background-color", "#E6E6E6");
            return false;
        }

    });

    $('#txtAddress').live('keydown', function (e) {
        var keyCode = e.keyCode || e.which;

        if (keyCode == 13) {
            e.preventDefault();
            $('#txtContactNo').focus();
            $("#txtAddress").css("background-color", "white");
            $("#txtContactNo").css("background-color", "#E6E6E6");
            return false;
        }

    });

    $('#txtContactNo').live('keydown', function (e) {
        var keyCode = e.keyCode || e.which;

        if (keyCode == 13) {
            e.preventDefault();
            $('#txtDesignation').focus();
            $("#txtContactNo").css("background-color", "white");
            $("#txtDesignation").css("background-color", "#E6E6E6");
            return false;
        }

    });

    $('#txtDesignation').live('keydown', function (e) {
        var keyCode = e.keyCode || e.which;

        if (keyCode == 13) {
            e.preventDefault();
            $('#txtEmailAddress').focus();
            $("#txtDesignation").css("background-color", "white");
            $("#txtEmailAddress").css("background-color", "#E6E6E6");
            return false;
        }

    });

    $('#txtEmailAddress').live('keydown', function (e) {
        var keyCode = e.keyCode || e.which;

        if (keyCode == 13) {
            e.preventDefault();
            $('#cboLocation').focus();
            $("#txtEmailAddress").css("background-color", "white");
            $("#cboLocation").css("background-color", "#E6E6E6");
            return false;
        }

    });

    $('#cboLocation').live('keydown', function (e) {
        var keyCode = e.keyCode || e.which;

        if (keyCode == 13) {
            e.preventDefault();
            $('#btnSave').focus();
            $("#cboLocation").css("background-color", "white");
            return false;
        }

    });

    function DeafultControlselect() {
        $('#txtName').focus();
        $("#txtName").css("background-color", "#E6E6E6");
    } 

</script>