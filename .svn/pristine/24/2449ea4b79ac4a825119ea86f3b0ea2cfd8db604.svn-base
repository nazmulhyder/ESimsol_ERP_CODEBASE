<!DOCTYPE html>
<html>
<head>
    <title>ঘোষণাপত্র</title>
    <link href="@Url.Content("~/Content/CSS/icon.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/CSS/easyui.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/CSS/Pikerstyle.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.ics.customize.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.easyui.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/json2.js")" type="text/javascript"></script>

    <style type="text/css">
       #tbl4 tr td {
            border-bottom: 1px solid black;
            border-left: 1px solid black;
        }

        #tbl4 {
            border: 1px solid black;
            border-left: 0px solid black;
            border-bottom: 0px solid black;
        }
    </style>

</head>
<body>
    @model ESimSol.BusinessObjects.Employee
    <div style="font-family: Tahoma">
        <table style="border:1px solid black; width:92%; margin-left:50px">
            <tr>
                <td>
                    <table style="width:92%;">
                        <tr>
                            <td style="width: 100%; text-align: center; font-size: 20px;">
                                <label style="margin-top:20px;">
                                    <img id="imgPhotoIcon" src="@Url.Action("GetCompanyLogoForHTMLPrint", "Employee", new { nid = Model.EmployeeID })" alt="Photo" style="width:40px; height:35px" />
                                </label>
                                <label style="font-size: 35px; font-weight: bold">@Model.BusinessUnit.Name</label>
                            </td>
                        </tr>
                        <tr>
                            <td style="width: 100%; text-align: center;">
                                <label style="font-size: 15px; font-weight: bold"> @Model.BusinessUnit.Address</label>
                            </td>
                        </tr>
                        <tr style="height:20px;">
                            <td></td>
                        </tr>
                    </table>

                    <table style="border:0; margin-left: 60px; width:92%">
                        <tr style="text-align:center;">
                            <td style="text-align:center;font-size: 25px;font-weight:bold; ">
                                <u>
                                    ঘোষণাপত্র 
                                </u>
                            </td>
                        </tr>
                        <tr style="text-align:center;">
                            <td style="text-align:center;">
                                
                            </td>
                        </tr>
                        <tr style="text-align:center;">
                            <td style="text-align:left;font-size: 20px;">
                                তারিখঃ @DateTime.Now.ToString("dd MMM yyyy")
                            </td>
                        </tr>
                        <tr style="text-align:center;">
                            <td style="text-align:center;"></td>
                        </tr>
                        <tr style="text-align:center;">
                            <td style="text-align:left;font-size: 20px;">
                                @{ string sName = ""; int nCount = 0; string[] S = { "০১", "০২", "০৩", "০৪", "০৫", "০৬", "০৭", "০৮", "০৯" }; }
                                @if (@Model.NameInBangla == "")
                                {
                                    sName = @Model.Name;
                                }
                                else
                                {
                                    sName = @Model.NameInBangla;
                                }
                                আমি  @sName পদবী @Model.DesignationName
                                কার্ড/আইডি নং  @Model.Code   সেকশন  @Model.DepartmentName এই মর্মে ঘোষণা
                                করছি যে, কোন কারনবশতঃ আমার স্থায়ী পঙ্গুত্ব বা মৃত্যু ঘটলে আমাকে নিয়োগকারী কর্তৃপক্ষ কোম্পানি @Model.BusinessUnit.Name আমার চাকুরী কালীন সময়ের যাবতীয় পাওনা অর্থাৎ অপরিশোধিত মজুরী/ বেতন, বোনাস, ক্ষতিপূরণ, অব্যয়িত বার্ষিক ছুটির মজুরী/বেতন ইত্যাদি আমার মনোনীত নিমক্ত ব্যক্তিদের নিকট পরিশোধ করবেনঃ

                            </td>
                        </tr>
                    </table>

                    <table id="tbl4" style="font-size: 20px; margin-left: 60px;text-align:center; width:92%;" cellpadding="0" cellspacing="0">
                        <tr style="text-align:center;">
                            <td style="text-align:center; font-weight:bold;">
                                ক্রম
                            </td>
                            <td style="text-align:center;font-weight:bold;">
                                বিবরণ
                            </td>
                            <td style="text-align:center;font-weight:bold;">
                                সম্পর্ক
                            </td>
                            <td style="text-align:center;font-weight:bold;">
                                পারসেন্টজ(%)
                            </td>
                        </tr>
                        @foreach (ESimSol.BusinessObjects.EmployeeNominee oItem in Model.EmployeeNominees)
                        {
                            <tr style="text-align:center;">
                                <td style="text-align:left;">
                                    @S[nCount].
                                    @{nCount++;}
                                </td>
                                <td style="text-align:left;">
                                    নামঃ @oItem.Name
                                    <br />
                                    ঠিকানাঃ @oItem.Address
                                    <br />
                                    ফোনঃ @oItem.ContactNo
                                    <br />
                                    ইমেলঃ @oItem.Email
                                </td>
                                <td style="text-align:center;">
                                    @oItem.Relation
                                </td>
                                <td style="text-align:center;">
                                    @oItem.Percentage
                                </td>
                            </tr>
                        }

                    </table>

                    <table style="float: left; clear: both; width: 95%; font-size:20px; margin-left:60px;">
                        @*FOOTER TABLE*@
                        <tr style="width:100%;text-align: left">
                            <td style="width:50%;">
                                <u>
                                    সাক্ষীগণঃ
                                </u>
                            </td>
                            <td style="width:50%; text-align: left;">
                                <u>
                                    স্বাক্ষরঃ
                                </u>
                            </td>
                        </tr>
                        <tr style="width:100%;text-align: left">
                            <td style="width:50%;">
                                ০১..............................................
                            </td>
                            <td style="width:50%; text-align: left;">
                                নামঃ @sName
                            </td>
                        </tr>
                        <tr style="width:100%;text-align: left">
                            <td style="width:40%;">
                                ০২..............................................
                            </td>
                            <td style="width:60%; text-align: left;">
                                পদবীঃ@Model.DesignationName
                            </td>
                        </tr>
                        <tr style="width:100%;text-align: left">
                            <td style="width:40%;">
                                ০৩..............................................
                            </td>
                            <td style="width:60%; text-align: left;">
                                কার্ড নংঃ@Model.Code
                            </td>
                        </tr>
                        <tr style="width:100%;text-align: left">
                            <td style="width:40%;">
                               
                            </td>
                            <td style="width:60%; text-align: left;">
                                সেকশনঃ@Model.DepartmentName
                            </td>
                        </tr>
                    </table>
                    <table style="float: left; clear: both; width: 95%; text-align: right">
                        @*FOOTER TABLE*@
                        <tr>
                            <td>
                                <a id="btnCancel" href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-cancel" plain="true">Close</a>
                                <a id="btnPrint" href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-print" plain="true">Print</a>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
    </div>
</body>
</html>
<script type="text/javascript">
    var _oEmployeeNmaes = [];
    var _sBaseAddress ="";
    var _obj = null;

    $(document).ready(function ()
    {
        _oEmployeeNmaes =@Html.Raw( new System.Web.Script.Serialization.JavaScriptSerializer().Serialize(Model));
        _sBaseAddress =@Html.Raw( new System.Web.Script.Serialization.JavaScriptSerializer().Serialize(HttpContext.Current.Session[SessionInfo.BaseAddress]));
        _obj = window.dialogArguments;
    });

    $('#btnCancel').click(function ()
    {
        window.close();
    });

    $('#btnPrint').click(function ()
    {
        document.getElementById("btnPrint").style.display='none';
        document.getElementById("btnCancel").style.display='none';
        window.print();
        window.close();
    });


</script>