
<div class="modal-header">
    <h4>{{modalTitle}}</h4>
</div>
<div class="modal-body" id="modal-body">
    <fieldset> 
        <legend>Searching Criteria:</legend>
        <div id="mainDiv">
            <div ng-bind-html="element" ng-repeat="element in elements" compile-template></div>
        </div>
    </fieldset>
</div>
<div class="modal-footer">
    <label ng-hide="lblLoadingMessage" style="float:left;color:green; ">Loading Please Wait...</label>
    <button class="btn btn-sm btn-success" type="button" ng-hide="btnHide_Ok" ng-click="modalOptionsSearch()" autofocus><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> OK</button>
    <button class="btn btn-sm btn-warning" type="button" ng-hide="btnHide_Reset" ng-click="modalOptionsReset()" autofocus><span class="glyphicon glyphicon-refresh" aria-hidden="true"></span> Reset</button>
    <button class="btn btn-sm btn-success" type="button" ng-hide="btnHide_Search" ng-click="modalOptionsSearch()" autofocus><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Search</button>
    <button class="btn btn-sm btn-danger" type="button" ng-click="modalOptionsCancel()"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Cancel</button>
</div>

