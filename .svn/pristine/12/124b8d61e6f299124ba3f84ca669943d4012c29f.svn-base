                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    ////debugger;
                    var oEmployees = jQuery.parseJSON(data);
                    if(oEmployees.length>0)
                    {
                        RefreshList(oEmployees);
                    }
                    else
                    {
                        alert('Data not found.!!!');
                    }

                },
                error: function (xhr, status, error)
                {
                    alert(error);
                }

            });

        }

