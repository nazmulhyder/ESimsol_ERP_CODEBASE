        function Add()
        {
            debugger
            var oParameter = new Object();
            oParameter.Name = "Add Employee";
            var tsv = ((new Date()).getTime()) / 1000;
            var url =_sBaseAddress+ "/Employee/View_EmployeeBasicInformation?nId=0&ts="+tsv;
            var nLeft=(window.screen.width/2)-(940/2);
            var nHeight=(window.screen.height/2)-(655/2);
            var oEmployee = window.showModalDialog(url, oParameter, 'dialogHeight:655px;dialogWidth:940px;dialogLeft:'+nLeft+';dialogTop:'+nHeight+';center:yes;resizable:no;status:no;scroll:yes');
            //var oEmployee = window.showModalDialog(url, oParameter, 'dialogHeight:665px;dialogWidth:940px;dialogLeft:200px;dialogTop:30;center:yes;resizable:no;status:no;scroll:no');
            debugger
            if(oEmployee!=null)
            {
                if(oEmployee.EmployeeID>0)
                {
                    var oEmployees = $('#tblEmployees').datagrid('getRows');
                    var nIndex=oEmployees.length;

                    $('#tblEmployees').datagrid('appendRow',oEmployee);
                    $('#tblEmployees').datagrid('selectRow', nIndex);
                }
            }
