        function Edit()
        {
            debugger;
            var oEmployee= $('#tblEmployees').datagrid('getSelected');
            if(oEmployee==null || oEmployee.EmployeeID<=0)
            {
                alert("Please select a item from list!");
                return;
            }
            if(oEmployee.WorkingStatus ==6)
            {
                alert("Edit is not possible for discontinued employee!");
                return false;
            }
            var SelectedRowIndex=$('#tblEmployees').datagrid('getRowIndex',oEmployee);
            var oParameter = new Object();
            oParameter.Name = "Edit Employee";
            //oParameter.ESSName = "Edit Salary Structure";
            var tsv = ((new Date()).getTime()) / 1000;
            var url =_sBaseAddress+  "/Employee/View_EmployeeBasicInformation?nId="+oEmployee.EmployeeID+"&ts="+tsv;

            var nLeft=(window.screen.width/2)-(940/2);
            var nHeight=(window.screen.height/2)-(655/2);
            var oEmployee = window.showModalDialog(url, oParameter, 'dialogHeight:655px;dialogWidth:940px;dialogLeft:'+nLeft+';dialogTop:'+nHeight+';center:yes;resizable:no;status:no;scroll:yes');
            //var oEmployee = window.showModalDialog(url, oParameter, 'dialogHeight:665px;dialogWidth:940px;dialogLeft:200;dialogTop:30px;center:yes;resizable:no;status:no;scroll:no');

            //debugger
            if(oEmployee!=null)
            {
                if(oEmployee.EmployeeID>0)
                {

                    $('#tblEmployees').datagrid('updateRow',{index: SelectedRowIndex,	row: oEmployee});
                }
            }
        }

        function Delete()
        {
            //debugger;
            var oEmployee= $('#tblEmployees').datagrid('getSelected');

            if(oEmployee==null || oEmployee.EmployeeID<=0)
            {
                alert("Invalid Field!!! please select a valid Field!");
                return false;
            }
            if (!confirm("Confirm to Delete?")) return ;
            var SelectedRowIndex=$('#tblEmployees').datagrid('getRowIndex',oEmployee);
            var tsv = ((new Date()).getTime()) / 1000;
            if (oEmployee.EmployeeID > 0)
            {
                $.ajax
                ({
                    type: "POST",
                    dataType: "json",
                    url : _sBaseAddress+  "/Employee/EmployeeDelete",
                    traditional: true,
                    data: JSON.stringify({nEmpId:oEmployee.EmployeeID,nts:tsv}),
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                        //debugger;
                        feedbackmessage = jQuery.parseJSON(data);
                        if (feedbackmessage == "Delete Successfully.")
                        {
                            alert("Delete sucessfully");
                            $('#tblEmployees').datagrid('deleteRow',SelectedRowIndex);

                        }
                        else
                        {
                            alert(feedbackmessage);
                        }
                    },
                    error: function (xhr, status, error)
                    {
                        alert(error);
                    }

                });
            }
        }

