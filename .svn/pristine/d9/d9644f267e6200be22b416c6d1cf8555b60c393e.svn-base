@using ESimSol.BusinessObjects;
@model ConsumptionChallan
  @foreach (Company oOrganizationalInformation in Model.Companys)
  {          
<table border="0" cellspacing="0">
        <tr>
            <td width="100%"   style="text-align: center; font-size:15px; font-weight:bold">
             @Model.Companys[0].Name 
            </td>
        </tr>
        <tr>
            <td width="100%"   style="text-align: center; font-size:8px">
               HeadOffice: @Model.Companys[0].Address
            </td>
        </tr>
        <tr>
            <td width="100%"   style="text-align: center; font-size:8px">
                Tel : @Model.Companys[0].Phone, E-mail : @Model.Companys[0].Email, Web : @Model.Companys[0].WebAddress
            </td>
        </tr>   
</table>
  }
<br />

<table>     
        <tr style="height:200px; vertical-align:bottom">
            <td width="100%"   style="text-align: center; font-size:12px; font-weight:bold">
                <u>@Model.ErrorMessage</u>
            </td>
        </tr>
</table>

<br />



<table>     
        <tr style="height:100px; vertical-align:bottom;">
            <td width="100%"   style="text-align: left; font-size:8px; font-weight:bold">
                <u> Challan No: @Model.CChallanNo</u>
            </td>
            <td width="100%"   style="text-align: right; font-size:8px; font-weight:bold">
                <u> Date : @Model.DisburseByDate</u>
            </td>
       </tr>
</table>
 
 <br />
 <table border="0">     
        <tr style="height:100px; vertical-align:bottom;">
            <td width="100%"   style="text-align: left; font-size:8px; font-weight:bold">
                 Vehicle No: @Model.VehicleNo
            </td>
            </tr>
            <tr>
            <td width="100%"   style="text-align: left; font-size:8px; font-weight:bold; border-left:1;">
                @*Gate Pass : @Model.GatePassNo*@
                Disburse By: @Model.DisburseByName
            </td>
        </tr>
</table>
 
 <br />

<table cellpadding="3" cellspacing="3" style="min-height:1000px !important;">    
    @{
        int nSLNo = 0;
       
    }
    @{
        double nQty = 0;
       
    }
    @{
        double nAQty = 0;
       
    }
    @{
        double nValue = 0;
       
    }
    <tr border="1" bgcolor="#DEDEDE">
        <td width="7%" style="text-align: center; font-size:9px; font-weight:bold">
            SL
        </td>
        <td width="35%" style="text-align: center; font-size:9px; font-weight:bold">
           Product Description
        </td>
        <td width="10%" style="text-align: center; font-size:9px; font-weight:bold">
            LotNo
        </td>
         <td width="10%" style="text-align: center; font-size:9px; font-weight:bold">
            Quantity
        </td>
        <td width="14%" style="text-align: center; font-size:9px; font-weight:bold">
           Unit Price(BDT)
        </td>
        <td width="15%" style="text-align: center; font-size:9px; font-weight:bold">
            Value(BDT)
        </td>
    </tr>
    @foreach (ConsumptionChallanDetail oCChallan in Model.CCDs)
    {       
        
            nSLNo++;
            nValue += (oCChallan.Quantity * oCChallan.UnitPrice);
            nQty += oCChallan.Quantity;
            <tr border="1">
                <td style="text-align: left; font-size:9px">
                     @nSLNo.ToString()
                </td>
                <td  style="text-align: left; font-size:9px">
                     @oCChallan.ProductNameCode
                </td>
                <td  style="text-align: left; font-size:9px">
                     @oCChallan.LotNo
                </td>
                <td  style="text-align: right; font-size:9px">
                     @oCChallan.Quantity
                </td>
                <td  style="text-align: right; font-size:9px">
                     @oCChallan.UnitPrice
                </td>
                 <td  style="text-align: right; font-size:9px">
                     @(oCChallan.Quantity * oCChallan.UnitPrice)
                </td>              
           </tr>
    }
    <tr border="0">
            <td style="text-align: left; font-size:9px"></td>
            <td  style="text-align: left; font-size:9px"></td>
            <td style="text-align: right; font-size:9px">
                Total :
            </td>
            <td style="text-align: right; font-size:9px">
              @nQty.ToString() 
            </td>
            <td  style="text-align: left; font-size:9px"></td>
            <td style="text-align: right; font-size:9px">
              @nValue.ToString() 
            </td>
            
        </tr>
</table>
<br />
<br />
