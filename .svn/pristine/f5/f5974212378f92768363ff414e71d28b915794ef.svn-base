<!DOCTYPE html />
<html>
<head>
    <title></title>
    <link href="@Url.Content("~/Content/CSS/icon.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/CSS/easyui.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/CSS/Pikerstyle.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.ics.customize.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.easyui.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/json2.js")" type="text/javascript"></script>
</head>
<body>
    @model ESimSol.BusinessObjects.Employee
              
    <div style="font-family: Tahoma">
     
   

        <table border="0" style="margin-top: 10px; margin-left: 0px;">@*TABLE-1*@
            <tr>
                <td style="width: 950px; text-align: center; font-size: 20px;">
                    <label style="margin-top:20px;">
                        <img id="imgPhotoIcon" src="@Url.Action("GetCompanyLogoForHTMLPrint", "Employee", new { nid = Model.EmployeeID })" alt="Photo" style="width:40px; height:35px" />

                    </label>
                    <label style="font-size: 35px; font-weight: bold">@Model.Company.Name</label>
                </td>
                <td style="width: 120px;"></td>
            </tr>
            <tr>
                <td style="width: 950px; text-align: center;">
                    <label style="font-size: 15px; font-weight: bold">@Model.Company.Address</label>
                </td>
                 <td style="width: 120px;"></td>
            </tr>
        </table>@*END TABLE-1*@
        <hr />
        
        <table border="0" style="margin-top: 20px; margin-left: 50px; font-size: 18px;" cellspacing="2" cellpadding="2">@*TABLE-3*@
           
            <tr>
                <td style=" text-align: left;">
                   মহা-ব্যবস্থাপক  
                </td>
                <td style=" text-align: left;" >
                   
                </td>
                 <td style=" text-align: left;" >
                  তারিখ : @Model.DateOfJoinInString
                </td>
            </tr>
            <tr>
                <td style=" text-align: left;">
                   এডমিন এন্ড কমপ্লায়েন্স
                </td>
                <td style=" text-align: left;" >
                   
                </td>
                 <td style=" text-align: left;" >
                  
                </td>
            </tr>
            <tr>
                <td style=" text-align: left;">
                   @Model.Company.Name
                </td>
                <td style=" text-align: left;" >
                   
                </td>
                 <td style=" text-align: left;" >
                  
                </td>
            </tr>
              <tr>
                <td style=" text-align: left;">
                 
                </td>
                <td style=" text-align: left; font-weight:bold; font-size:30px;" >
                  বিষয় : যোগদান পত্র 
                </td>
                 <td style=" text-align: left;" >
                  
                </td>
            </tr>
             <tr>
                <td style=" text-align: left;">
                 জনাব,
                </td>
                <td style=" text-align: left;" >
                  
                </td>
                 <td style=" text-align: left;" >
                  
                </td>
            </tr>
              <tr>
                <td style=" text-align: left;" colspan = "3">
                 সুত্র আপনার প্রদত্ত নিয়োগ পত্র নং.......................................তারিখ @Model.DateOfJoinInString
                 নিয়োগ পত্রে উল্লেখিত শর্তাদি মেনে নিয়ে আমি অদ্য  @Model.DateOfJoinInString  তারিখ পূর্বাহ্নে  
                 @Model.DepartmentName বিভাগের @Model.DesignationName পদে যোগদান পত্র দাখিল করিলাম ।
                </td>
                
            </tr>
            <tr style="height:30px;">
                <td style=" text-align: left;" colspan="3">
                 
                </td>
                
            </tr>
            <tr>
                <td style=" text-align: left;">
                 
                </td>
                <td style=" text-align: left;" >
                  
                </td>
                 <td style=" text-align: left;" >
                  সাক্ষর :
                </td>
            </tr>
            <tr>
                <td style=" text-align: left;">
                 
                </td>
                <td style=" text-align: left;" >
                  
                </td>
                 <td style=" text-align: left;" >
                  নাম :<label>@if (@Model.NameInBangla == "")
                                        {@Model.Name}
                                        else
                                        {@Model.NameInBangla}</label>
                </td>
            </tr>


        </table>@*END TABLE-4*@

        

        <table style="float: left; clear: both; width: 970px; text-align: right">@*FOOTER TABLE*@
            <tr>
                <td>
                    <a id="btnCancel" href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-cancel" plain="true">Close</a> 
                    <a id="btnPrint" href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-print" plain="true">Print</a>
                </td>
            </tr>
        </table>
       
    </div>
</body>
</html>
<script type="text/javascript">

var _oEmployee = null;
var _sBaseAddress ="";
var _obj = null;

$(document).ready(function ()
{
  
    _oEmployee =@Html.Raw(new System.Web.Script.Serialization.JavaScriptSerializer().Serialize(Model)); 
    _sBaseAddress =@Html.Raw( new System.Web.Script.Serialization.JavaScriptSerializer().Serialize(HttpContext.Current.Session[SessionInfo.BaseAddress]));
    _obj = window.dialogArguments;
    
    
});


$('#btnCancel').click(function ()
{
    window.close();
 });


$('#btnPrint').click(function ()
{
    document.getElementById("btnPrint").style.display='none';
    document.getElementById("btnCancel").style.display='none';
    window.print();
    window.close();
 });


</script>