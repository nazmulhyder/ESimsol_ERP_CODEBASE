@{
    ViewBag.Title = "VehicleType List";
}
@model IEnumerable<ESimSol.BusinessObjects.VehicleType>

    <div class="menuMainCollectionTable" ng-app="VehicleTypeApp" style="height:520px">
        <div ng-controller="VehicleTypeController">
            <div style="margin-bottom:2px; display:block" title="VehicleType List" class="ui-grid-top-panel">
                <input type="text" ng-model="txtSearchByName" ng-keyup="SearchByName($event)" placeholder="Search by Name" style="width:190px" />
                <button type="button" id="btnAdd" class="btn btn-primary btn-sm" aria-label="Left Align" ng-click="Add()"><span class="glyphicon glyphicon-plus" aria-hidden="true"> Add</span></button>
                <button type="button" id="btnEdit" class="btn btn-primary btn-sm" aria-label="Left Align" ng-click="Edit()"><span class="glyphicon glyphicon-edit" aria-hidden="true"> Edit</span></button>
                <button type="button" id="btnDetails" class="btn btn-primary btn-sm" aria-label="Left Align" ng-click="View()"><span class="glyphicon glyphicon-th" aria-hidden="true"> View</span></button>
                <button type="button" id="btnDelete" class="btn btn-danger btn-sm" aria-label="Left Align" ng-click="Delete()"><span class="glyphicon glyphicon-remove" aria-hidden="true"> Delete</span></button>
                <button type="button" id="btnPrintList" class="btn btn-primary btn-sm" aria-label="Left Align" ng-click="PrintList()"><span class="glyphicon glyphicon-print" aria-hidden="true"> Print List</span></button>
                <button type="button" id="btnExportToExcel" class="btn btn-primary btn-sm" aria-label="Left Align" ng-click="ExportToExcel()"><span class="glyphicon glyphicon-print" aria-hidden="true"> Export to Excel</span></button>
            </div>
            <div ui-grid="gridOptions" ui-grid-selection  class="grid-angular" style="width:100%"></div>
        </div>
    </div>
<style type="text/css">
    .grid-angular {
        width: 100%;
        height:520px;
    }
</style>
<script type="text/javascript">
    debugger;
    var oVehicleTypes =@Html.Raw( new System.Web.Script.Serialization.JavaScriptSerializer().Serialize(Model));
    var _sBaseAddress =@Html.Raw( new System.Web.Script.Serialization.JavaScriptSerializer().Serialize(HttpContext.Current.Session[SessionInfo.BaseAddress]));
    var oAuthorizationRolesMapping =@Html.Raw( new System.Web.Script.Serialization.JavaScriptSerializer().Serialize(HttpContext.Current.Session[SessionInfo.AuthorizationRolesMapping]));
   
    $('#btnExportToExcel,#btnPrintList').hide(); 
    debugger;
    var CCapp= angular.module('VehicleTypeApp', ['ui.grid','ui.grid.selection','ms.service']);
    CCapp.controller('VehicleTypeController',function ($scope,uiGridConstants,userSession) 
    {
        oVehicleTypes= (userSession.getData('VehicleTypes').length>0)? userSession.getData('VehicleTypes'):oVehicleTypes;
        debugger;
        $scope.gridOptions= {
            multiSelect: false,
            enableFullRowSelection: true,
            columnDefs: [
              { field: 'VehicleTypeCode', name:'Code', width:'20%' },
              { field: 'VehicleTypeName', name:'Name', width:'21%' },
              //{ field: 'ServiceTypeSt', name:'Type', width:'24%' },
              { field: 'Remarks', name:'Remarks', width:'32%' , enableSorting: false}
            ],
            data: oVehicleTypes,
            onRegisterApi : function(gridApi)
            {
                $scope.gridApi = gridApi;
                $scope.gridApi.selection.clearSelectedRows();
                $scope.gridApi.core.refresh();
                if(oVehicleTypes.length>0 && userSession.getRowIndex()>=0)
                {
                    $scope.gridApi.grid.modifyRows(oVehicleTypes);
                    $scope.gridApi.selection.selectRow(oVehicleTypes[userSession.getRowIndex()]);
                    $scope.RowSelect(oVehicleTypes[userSession.getRowIndex()]);
                }
                userSession.clear();
            }
        };
       
        $scope.Add=function()
        {
            sessionStorage.setItem("VehicleTypes", JSON.stringify($scope.gridOptions.data));
            sessionStorage.setItem("SelectedRowIndex", -1);
            sessionStorage.setItem("VehicleTypeHeader", "Add VehicleType Category");
            sessionStorage.setItem("BackLink", window.location.href);
            window.location.href = _sBaseAddress+ "/VehicleType/ViewVehicleType?id=0";
        }            
        $scope.Edit= function ()
        {
            debugger;
            var data=$scope.gridApi.selection.getSelectedRows();
            var oVehicleType= data[0];//get selected index
            if(oVehicleType==null || oVehicleType.VehicleTypeID<=0)
            {
                alert("Please select a item from list!");
                return;
            }
            var SelectedRowIndex= $scope.gridOptions.data.indexOf(oVehicleType);
            sessionStorage.setItem("VehicleTypes", JSON.stringify($scope.gridOptions.data));
            sessionStorage.setItem("SelectedRowIndex", SelectedRowIndex);
            sessionStorage.setItem("VehicleTypeHeader", "Edit VehicleType Category");
            sessionStorage.setItem("BackLink", window.location.href);
            window.location.href = _sBaseAddress+  "/VehicleType/ViewVehicleType?id="+oVehicleType.VehicleTypeID
        }
                
        $scope.View= function ()
        {
            //debugger;
            var data=$scope.gridApi.selection.getSelectedRows();
            var oVehicleType= data[0];//get selected index
            if(oVehicleType==null || oVehicleType.VehicleTypeID<=0)
            {
                alert("Please select a item from list!");
                return;
            }
            var SelectedRowIndex= $scope.gridOptions.data.indexOf(oVehicleType);
            sessionStorage.setItem("VehicleTypes", JSON.stringify($scope.gridOptions.data));
            sessionStorage.setItem("SelectedRowIndex", SelectedRowIndex);
            sessionStorage.setItem("VehicleTypeHeader", "View VehicleType Category");
            sessionStorage.setItem("BackLink", window.location.href);
            window.location.href = _sBaseAddress+  "/VehicleType/ViewVehicleType?id="+oVehicleType.VehicleTypeID;
        }
        $scope.Delete = function()
        {
            var data=$scope.gridApi.selection.getSelectedRows();
            var oVehicleType= data[0];//get selected index
            if(oVehicleType==null || oVehicleType.VehicleTypeID<=0)
            {
                alert("Please select a item from list!");
                return;
            }
            if (!confirm("Confirm to Delete?")) return ;
            var SelectedRowIndex= $scope.gridOptions.data.indexOf(oVehicleType);
            if (oVehicleType.VehicleTypeID > 0)
            {
                $.ajax
                ({
                    type: "GET",
                    dataType: "json",
                    url : _sBaseAddress+ "/VehicleType/Delete",
                    data: { id: oVehicleType.VehicleTypeID},
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {
                        debugger;
                        feedbackmessage = jQuery.parseJSON(data);
                        if (feedbackmessage == "Deleted")
                        {
                            alert("Delete sucessfully");
                            $scope.gridOptions.data.splice(SelectedRowIndex,1);
                            $scope.gridApi.core.refresh();
                        }
                        else
                        {
                            alert(feedbackmessage);
                        }
                    },
                    error: function (xhr, status, error)
                    {
                        alert(error);
                    }

                });
            }
        }
        $scope.PrintList = function()
        {
            var oVehicleTypes= $scope.gridOptions.data;
            var ids ="";
            if(oVehicleTypes.length >0)
            {
                for(var i =0;i<oVehicleTypes.length;i++)
                {
                    ids =ids+oVehicleTypes[i].VehicleTypeID+",";
                }
                ids= ids.substring(0, ids.length - 1);
            }
            else
            {
                alert("Data not found ");
                return;
            }
            window.open(_sBaseAddress + '/VehicleType/PrintList?sIDs='+ids);
        }
        $scope.ExportToExcel = function()
        {
            var oVehicleTypes=  $scope.gridOptions.data;
            var ids ="";
            if(oVehicleTypes.length >0)
            {
                for(var i =0;i<oVehicleTypes.length;i++)
                {
                    ids =ids+oVehicleTypes[i].VehicleTypeID+",";
                }
                ids= ids.substring(0, ids.length - 1);
            }
            else
            {
                alert("Data not found ");
                return;
            }
            window.open(_sBaseAddress + '/VehicleType/VehicleTypeExportToExcel?sIDs='+ids);
        }

        //button hide unhide
            $('#btnAdd,#btnEdit,#btnView,#btnDelete,#btnPrintList').hide(); 
            if(PermissionChecker('Add','VehicleType',oAuthorizationRolesMapping)){$("#btnAdd").show();}
            if(PermissionChecker('Edit','VehicleType',oAuthorizationRolesMapping)){$("#btnEdit").show();}
            if(PermissionChecker('View','VehicleType',oAuthorizationRolesMapping)){$("#btnView").show();}
            if(PermissionChecker('Delete','VehicleType',oAuthorizationRolesMapping)){$("#btnDelete").show();}
            //if(PermissionChecker('PrintList','VehicleType',oAuthorizationRolesMapping)){$("#btnPrintList").show();}
    });


</script>