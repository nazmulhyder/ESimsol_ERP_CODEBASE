@{
    ViewBag.Title = "LC Terms";
}
@model IEnumerable<ESimSol.BusinessObjects.LCTerm>
<head>
    <title>LC Terms</title>
    <script src="@Url.Content("~/Views/LCTerm/LCTerm.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Views/LCTerm/LCTerms.js")" type="text/javascript"></script>
</head>
<body>
    <div id="winLCTerm" class="easyui-window winstyle" title="LCTerm" data-options="modal:true,closed:true,collapsible:false,minimizable:false,maximizable:false,closable:false">
        <fieldset>
            <table class="tbl">
                <tr>
                    <td class="tdLabel">
                        <label id="lblDays">At :</label>
                    </td>
                    <td class="tdInput">
                        <div class="Days" style="float:left" id="divDays"><input class="easyui-numberbox" id="txtDays" /> </div>
                        <div class="Days" style="float:left"><input type="checkbox" name="chkIncludeDays" id="chkIncludeDays" onclick="IsChecked()" /><label class="tdLabel">Is IncludeDays</label></div>
                    </td>
                </tr>       
                 <tr>
                    <td class="tdLabel">
                        <label style="font-family:Tahoma">Days :</label>
                    </td>
                    <td class="tdInput">
                        <input id="txtName" type="text"/>
                    </td>
                </tr>
                <tr>
                    <td class="tdLabel">
                        <label>Note :</label>
                    </td>
                    <td class="tdInput">
                        <input id="txtDescription" type="text" />
                    </td>
                </tr>                     
            </table>
        </fieldset>
        <fieldset class="actionfieldsetstyle">
            <legend>Actions : </legend>
            <a id="btnSaveLCTerm" href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-save" plain="true">Save</a>
            <a id="btnCloseLCTerm" href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-cancel" plain="true">Close</a>
        </fieldset>
    </div>

    <div class="menuMainCollectionTable">
        <table id="tblLCTerms" title="LC Terms" class="easyui-datagrid" fit="true" fitcolumns="true" rownumbers="true" pagination="true" singleselect="true" autorowheight="false" toolbar="#toolbarLCTerm">
            <thead>
                <tr>
                    <th field="NameDaysInString" width="390"> LC Terms </th>
                    <th field="Description" width="470"> Note </th>
                </tr>
            </thead>
        </table>
        <div id="toolbarLCTerm">
            <input id="txtSearchByLCTerm" type="text" placeholder="Search by LC Terms" style="width: 200px"/>
            <a id="btnAddLCTerm" href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-add" plain="true">Add</a>
            <a id="btnEditLCTerm" href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-edit" plain="true">Edit</a>
            <a id="btnDeleteLCTerm" href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-remove" plain="true">Delete</a>
            <a id="btnViewLCTerm" href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-details" plain="true">Details</a>
            <a id="btnPrintLCTerm" href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-print" plain="true">Print</a>
        </div>
    </div>
</body>

<style type="text/css">
    #winLCTerm {
        width: 400px;
    }
    #txtDays {
        width: 100px;
    }
</style>

<script type="text/javascript">
    var _sBaseAddress="";
    var _oLCTerm=null;
    var _oLCTerms=[];

    $(document).ready(function () {
        _sBaseAddress =@Html.Raw( new System.Web.Script.Serialization.JavaScriptSerializer().Serialize(HttpContext.Current.Session[SessionInfo.BaseAddress]));
        _oLCTerms =@Html.Raw( new System.Web.Script.Serialization.JavaScriptSerializer().Serialize(Model));
        InitializeLCTermsEvents();
        InitializeLCTermEvents();
    });

    $(document).keydown(function (e) { if (e.keyCode == 27) { $('div').icsWindow('close'); } });

    $("#btnPrintLCTerm").click(function () {
        var nts = ((new Date()).getTime()) / 1000;
        window.open(_sBaseAddress + '/LCTerm/Print?nts='+nts, "_blank");
    });
</script>
