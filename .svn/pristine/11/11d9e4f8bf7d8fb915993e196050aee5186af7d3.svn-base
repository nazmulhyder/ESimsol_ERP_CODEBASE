                oPdfPTable.HorizontalAlignment = Element.ALIGN_LEFT;
                oPdfPTable.SetWidths(new float[] { 
                                                    25f,    //SL 
                                                    40f,    //Sheet No
                                                   115f,    //PI No
                                                    85f,    //Buyer Name
                                                    50f,    //Sheet Issue Date
                                                    85f,    //Product name
                                                    60f,    //Color name
                                                    35f,    //M Unit
                                                    50f,    //Sheet Qty
                                                    70f,    //Raw Consumption
                                                    60f,    //QC Pass Qty
                                                    50f,    //Reject Qty
