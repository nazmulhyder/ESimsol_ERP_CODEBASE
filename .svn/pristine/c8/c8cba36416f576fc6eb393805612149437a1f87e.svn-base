<div class="modal-header">
    <h4 class="modal-title" id="modal-title" ng-bind="PickerTitle">Advance Search</h4>
</div>
<div class="modal-body regionSearch">
    <fieldset style="margin-bottom: 0px;">
        <legend>Searching criterion</legend>
        <div class="row col-md-12">
            <div class="col-md-3 text-right"><label class="control-label">Select Store:</label></div>
            <div class="col-md-9 text-left">
                <select class="form-control" ng-model="CboWUID" ng-options="item.WorkingUnitID as item.OperationUnitName for item in Stores">
                    <option value="">--------Select Store-------</option>
                </select>

            </div>
        </div>
        <div class="row col-md-12">
            <div class="col-md-3 text-right"><label class="control-label">Lot No:</label></div>
            <div class="col-md-9 text-left">

                <input type="text" class="form-control" ng-model="LotNo" ng-keydown="SearchKeyDownLotNo($event)" placeholder="Type Lot No ">

            </div>
        </div>

        <div class="row col-md-12">
            <div class="col-md-3 text-right"><label class="control-label"> Party Name:</label></div>
            <div class="col-md-9 text-left">
                <div class="input-group">
                    <input type="text" class="form-control" ng-model="ContractorName" ng-keydown="SearchKeyDownContractorName($event)" placeholder="Type Party Name & Press Enter">
                    <span class="input-group-btn">
                        <button type="button" class="btn btn-sm" aria-label="Left Align" ng-click="PickContractor()"> <span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
                    </span>
                </div>

            </div>
        </div>

        @*<div class="row col-md-12">
            <div class="col-md-3 text-right"><label class="control-label"> Product Name:</label></div>
            <div class="col-md-9 text-left">
                <div class="input-group">
                    <input type="text" class="form-control" ng-model="ProductName" ng-keydown="SearchKeyDownProductName($event)" placeholder="Type Product Name & Press Enter">
                    <span class="input-group-btn">
                        <button type="button" class="btn btn-sm" aria-label="Left Align" ng-click="PickProduct()"> <span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
                    </span>
                </div>

            </div>
        </div>*@
        



        







    </fieldset>
</div>
<div class="modal-footer">
    <label ng-hide="lblLoadingMessage" style="float:left;color:green; ">Loading Please Wait...</label>
    <button class="btn btn-success" type="button" ng-click="reset()">Reset</button>
    <button class="btn btn-primary" type="button" ng-click="search()">Search</button>
    <button class="btn btn-warning" type="button" ng-click="closeAdvanceSearchModal()">Close</button>
</div>
