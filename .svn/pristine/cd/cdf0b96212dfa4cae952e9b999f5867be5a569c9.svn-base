<html>
    <head>
      <link href="@Url.Content("~/Content/CSS/icon.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/CSS/easyui.css")" rel="stylesheet" type="text/css" /> 
    <link href="@Url.Content("~/Content/CSS/Pikerstyle.css")" rel="stylesheet" type="text/css" />  

    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>            
    <script src="@Url.Content("~/Scripts/jquery.ics.customize.js")" type="text/javascript"></script>  
    <script src="@Url.Content("~/Scripts/jquery.easyui.min.js")" type="text/javascript"></script>    

    <script src="@Url.Content("~/Scripts/jquery-ui.min.js")" type="text/javascript"></script> 
    <script src="@Url.Content("~/Scripts/json2.js")" type="text/javascript"></script> 
    </head>   
    @model IEnumerable<ESimSol.BusinessObjects.ColorCategory>
    <body>
        <div style="margin-left:0px; height:198px">            
            <input type="text"  id="txtSearchByName" style="width:380px"/>
            <table id="tblColorCategory" title=""  class="easyui-datagrid" style="width:380px;height:195px" fitColumns="false" rownumbers="true" pagination="false" singleSelect="true" autoRowHeight="false">
                <thead>  
                    <tr>                        
                        <th field="ColorName" width="355">Color Name </th>
                    </tr>  
                </thead> 
            </table>​  
            <table border="0" cellpadding="1" cellspacing="1">
                <tr>
                    <td style="width:280px"></td>
                    <td style="width:50px; text-align:center"><a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-ok" plain="true" onclick="OkButtonClick()">Ok</a></td>
                    <td style="width:50px; text-align:center"><a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-cancel" plain="true" onclick="Close()">Close</a> </td>
                </tr>
            </table>                                        
        </div>
    </body>
</html>

<script type="text/javascript">
var _oColorCategorys=[];
$(document).ready(function () {
    ////debugger;
    var obj = window.dialogArguments;
    _oColorCategorys = @Html.Raw( new System.Web.Script.Serialization.JavaScriptSerializer().Serialize(Model));     
    RefreshList(_oColorCategorys);    
    document.getElementById("txtSearchByName").value=obj.EnteredText;
});

$('#txtSearchByName').keyup(function (e) {
    ////debugger;
    var c = String.fromCharCode(e.which);
    var txtSearchByName = document.getElementById('txtSearchByName').value;

    var oSearchedColor = [];  var sTempName="";
    var oCurrentList = $('#tblColorCategory').datagrid('getRows'); 
    if (e.which == 8)
    {
        oCurrentList = _oColorCategorys;
    }     
    for(i=0;i<oCurrentList.length;++i){
        sTempName=oCurrentList[i].ColorName;        
        n=sTempName.toUpperCase().indexOf(txtSearchByName.toUpperCase())
        if(n!=-1)
        {
            oSearchedColor.push(oCurrentList[i]); 
        }       
    }
    RefreshList(oSearchedColor);
});

$(document).keydown(function(e) {    
    //debugger;
    //alert('hello world');
    var oLedger= $('#tblColorCategory').datagrid('getSelected'); 
    var nIndex=$('#tblColorCategory').datagrid('getRowIndex', oLedger); 
    if(e.which == 38)//up arrow=38
    {
        if(nIndex<=0)
        {
            $('#tblColorCategory').datagrid('selectRow', 0); 
        }
        else
        {
            $('#tblColorCategory').datagrid('selectRow', nIndex-1); 
        }
        $('#txtSearchByName').blur();
    }
    if(e.which == 40)//down arrow=40
    {
        var oCurrentList = $('#tblColorCategory').datagrid('getRows'); 
        if(nIndex>=oCurrentList.length-1)
        {
            $('#tblColorCategory').datagrid('selectRow', oCurrentList.length-1); 
        }
        else
        {
            $('#tblColorCategory').datagrid('selectRow', nIndex+1); 
        }
        $('#txtSearchByName').blur();
    }
    if(e.which == 13)//enter=13
    {
        //debugger;
        var oSelectedColor= $('#tblColorCategory').datagrid('getSelected'); 
        if(oSelectedColor ==null || parseInt(oSelectedColor.ColorCategoryID)<=0)
        {
            alert("Please select an Color!");
            return;
        }
        window.returnValue = oSelectedColor;
        window.close();
    }
    if(e.which == 27)//escape=27
    {
        //debugger;        
        window.returnValue = null;
        window.close();
    }
});


function OkButtonClick()
{
    //debugger;
    var oSelectedColor= $('#tblColorCategory').datagrid('getSelected'); 
    if(oSelectedColor ==null || parseInt(oSelectedColor.ColorCategoryID)<=0)
    {
        alert("Please select an Color!");
        return;
    }
    window.returnValue = oSelectedColor;
    window.close();
}

function Close()
{
    window.close();
}

function RefreshList(oLedgers)
{   
    $('#tblColorCategory').empty(); 
    data=oLedgers;
    data={"total":""+data.length+"","rows":data};
    $('#tblColorCategory').datagrid('loadData',data);  
    $('#tblColorCategory').datagrid('selectRow', 0);
}


$(document).keydown(function(e) {    
    //debugger;
    if(e.which == 27)//escape=27
    {
        //debugger;        
        window.close();
    }
});
</script>