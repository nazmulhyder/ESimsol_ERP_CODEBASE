    function RefreshTotalSummary(objs)
    {
        var nDebitQty=0, nCreditQty=0, nDebitAmount=0, nCreditAmount=0;       
        for(var i=0; i<objs.length; i++)
        {
            nDebitQty = nDebitQty + parseFloat((objs[i].DebitQty).toFixed(2));
            nCreditQty = nCreditQty + parseFloat((objs[i].CreditQty).toFixed(2));
            nDebitAmount = nDebitAmount + parseFloat((objs[i].DebitAmount).toFixed(2));
            nCreditAmount = nCreditAmount + parseFloat((objs[i].CreditAmount).toFixed(2));
        }
        nDebitQty = nDebitQty < 0 ? '('+formatPrice((nDebitQty * (-1)).toFixed(2))+')': nDebitQty===0.00 ? '-' : formatPrice(nDebitQty.toFixed(2));
        nCreditQty = nCreditQty <0 ?'('+formatPrice((nCreditQty * (-1)).toFixed(2))+')': nCreditQty ===0.00?'-' : formatPrice(nCreditQty.toFixed(2));
        nDebitAmount = nDebitAmount < 0 ? '('+formatPrice((nDebitAmount * (-1)).toFixed(2))+')': nDebitAmount===0.00 ? '-' : formatPrice(nDebitAmount.toFixed(2));
        nCreditAmount = nCreditAmount <0 ?'('+formatPrice((nCreditAmount * (-1)).toFixed(2))+')': nCreditAmount ===0.00?'-' : formatPrice(nCreditAmount.toFixed(2));
        
        var oFooterObj = {             
             VoucherNo:'Grand Total:',
             DebitQtyString : nDebitQty,
             DebitAmountInString : nDebitAmount,
             CreditQtyString : nCreditQty,
             CreditAmountInString : nCreditAmount
         }
        $('#tblProductDetails').datagrid('reloadFooter',[oFooterObj]);
    }

