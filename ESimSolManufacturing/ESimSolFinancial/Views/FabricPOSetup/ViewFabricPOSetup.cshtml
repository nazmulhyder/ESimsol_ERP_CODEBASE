@{
    ViewBag.Title = "Add Order Setup";
}
@model ESimSol.BusinessObjects.FabricPOSetup

<div style="padding-top:5px" ng-app="FabricPOSetupAPP" ng-controller="FabricPOSetupCtrl" class="form-horizontal regionFabricPOSetup">
    <fieldset>
        <legend>Invoice Info</legend>
        <div class="row col-md-12" style="padding-top:50px">
            
            <div class="col-md-2 text-right"><label class="control-label">Order Name:</label></div>
            <div class="col-md-3 text-left">
                <input ng-model="FabricPOSetup.OrderName" ng-disabled="disabled" class="form-control" required />
            </div>
            <div class="col-md-2 text-right"><label class="control-label">Number Code:</label></div>
         
            <div class="col-md-3 text-left">
                <input ng-model="FabricPOSetup.NoCode" ng-disabled="disabled" class="form-control" required />       
            </div>
            <div class="col-md-2 text-right"><label class="control-label">Fabric Code:</label></div>
            <div class="col-md-3 text-left">
                <input ng-model="FabricPOSetup.FabricCode" ng-disabled="disabled" class="form-control" required />
            </div>
        </div>
        <div class="row col-md-12">
            <div class="col-md-2 text-right"><label class="control-label">PrintNo:</label></div>
            <div class="col-md-3 text-left">
                <select id="cboOrderType" ng-model="FabricPOSetup.PrintNo" ng-options="obj.id as obj.Value for obj in PrintNos" ng-disabled="disabled" class="form-control"></select>
            </div>
            <div class="col-md-2 text-right"><label class="control-label">Currency:</label></div>
            <div class="col-md-3 text-left">
                <select id="cboOrderType" ng-model="FabricPOSetup.CurrencyID" ng-options="obj.CurrencyID as obj.CurrencyName for obj in Currencys" ng-disabled="disabled" class="form-control"></select>
            </div>
            <div class="col-md-2 text-right"><label class="control-label">Is Lab Dip Apply?</label></div>
            <div class="col-md-3 text-left">
                <input type="checkbox" ng-click="ComboChange('IsLDApply',true)" ng-model="FabricPOSetup.IsLDApply">Yes
                <input type="checkbox" ng-click="ComboChange('IsLDApply',false)" ng-model="!FabricPOSetup.IsLDApply">No
            </div>
        </div>
        <div class="row col-md-12" >
            <div class="col-md-2 text-right"><label class="control-label">Print Name:</label></div>
            <div class="col-md-10 text-left">
                <input ng-model="FabricPOSetup.POPrintName" ng-disabled="disabled" class="form-control" />
            </div>
        </div>
        <div class="row col-md-12" style="padding-bottom:50px">
            <div class="col-md-2 text-right"><label class="control-label">Is Need Check By?</label></div>
            <div class="col-md-3 text-left">
                <input type="checkbox" ng-click="ComboChange('IsNeedCheckBy',true)" ng-model="FabricPOSetup.IsNeedCheckBy">Yes
                <input type="checkbox" ng-click="ComboChange('IsNeedCheckBy',false)" ng-model="!FabricPOSetup.IsNeedCheckBy">No
            </div>
            <div class="col-md-2 text-right"><label class="control-label">Is Need Exp. Delivery?:</label></div>
            <div class="col-md-3 text-left">
                <input type="checkbox" ng-click="ComboChange('IsNeedExpDelivery',true)" ng-model="FabricPOSetup.IsNeedExpDelivery">Yes
                <input type="checkbox" ng-click="ComboChange('IsNeedExpDelivery',false)" ng-model="!FabricPOSetup.IsNeedExpDelivery">No
            </div>
            <div class="col-md-2 text-right"><label class="control-label"></label></div>
            <div class="col-md-3 text-left">

            </div>
        </div>
    </fieldset>
   
   
    <fieldset>
        <legend>Action</legend>
        <div class="row col-md-12 text-right">
            <button type="button" class="btn btn-sm" aria-label="Left Align" ng-click="save_Revise()" ng-hide="hide_Revise"> <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"> Save(Revise)</span> </button>
            <button type="button" class="btn btn-sm" aria-label="Left Align" ng-click="Approve()" ng-hide="hide_Approve"> <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"> Approve</span> </button>
            <button type="button" class="btn btn-sm" aria-label="Left Align" ng-click="save()" ng-hide="hide_Save"> <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true">Save</span> </button>
            <button type="button" class="btn btn-sm" aria-label="Left Align" ng-click="close()"> <span class="glyphicon glyphicon-remove" aria-hidden="true"> Close</span> </button>
        </div>
    </fieldset>

 
</div>


