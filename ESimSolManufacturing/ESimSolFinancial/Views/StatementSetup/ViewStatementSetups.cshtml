        function Refresh()
        {
            var oStatementSetups = $('#tblStatementSetups').datagrid('getRows');
            data=oStatementSetups;
            data={"total":""+data.length+"","rows":data};
            $('#tblStatementSetups').datagrid('loadData',data);
