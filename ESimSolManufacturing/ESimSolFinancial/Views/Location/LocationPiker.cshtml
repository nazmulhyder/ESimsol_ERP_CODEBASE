<head>
    <link href="@Url.Content("~/Content/CSS/icon.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/CSS/easyui.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/CSS/Pikerstyle.css")" rel="stylesheet" type="text/css" />

    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.ics.customize.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.easyui.min.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Scripts/jquery-ui.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/json2.js")" type="text/javascript"></script>
</head>


@{
    ViewBag.Title = "";
}

@model ESimSol.BusinessObjects.Location

<div id="menu-wrapper">
    <table border="0">
        <tr>

            <td style="width:220px; vertical-align:top"> <img src="../../Content/Images/LogoInfocrat.png" ; alt="infocrat image" style="height:50px; width:201px; padding-bottom:0px" /> </td>
            <td style="width:330px; text-align:center; text-decoration:underline; font-size: x-large; color: White"></td>
        </tr>
    </table>
</div>

<div style="font-family:Tahoma">

    <table border="0" cellpadding="0" cellspacing="0">
        <tr>
            <td style="width:500px; text-align:left">
                <label style="font-size:12px; font-weight:bold; text-decoration:Underline"> Serarch by Location Name :</label>
                <input type="text" id="txtSearchByCode" style="width:450px" />
            </td>
        </tr>
        <tr style="height:300px">
            <td style="width:450px; vertical-align:top">
                <table border="0" cellpadding="0" cellspacing="0">
                    <tr style="height:300px">
                        <td style="width:450px; vertical-align:top">
                            <div style="margin-left:0px; margin-top:8px; height:300px">
                                <table id="tblLocationPopUp" title="Location" class="easyui-datagrid" style="width:450px;height:300px" fitcolumns="false" rownumbers="true" pagination="false" singleselect="true" , autorowheight="false" toolbar="#toolbar">
                                    <thead>
                                        <tr>
                                            <th data-options="field:'Selected',checkbox:true"></th>
                                            <th field="LocCode" width="200">Code</th>
                                            <th field="Name" width="200">Location Name</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr style="height:50px">
            <td style="width:450px">
                <table>
                    <tr>
                        <td style="width:350px; text-align:left">
                            <label id="lblCount" style="font-size:11px; font-weight:bold"></label>
                        </td>
                        <td style="width:50px; text-align:center">
                            <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-ok" plain="true" onclick="Select()">Ok</a>
                        </td>
                        <td style="width:50px; text-align:center">
                            <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-cancel" plain="true" onclick="Close()">Close</a>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</div>




<script type="text/javascript">
var _bMultipleItemReturn=false;
var oReturnObject = new Object();
$(document).ready(function () {
    
         var obj = window.dialogArguments;
        _bMultipleItemReturn=obj.MultipleReturn;
        objmodel =@Html.Raw(new System.Web.Script.Serialization.JavaScriptSerializer().Serialize(Model));
        data = @Html.Raw(new System.Web.Script.Serialization.JavaScriptSerializer().Serialize(Model.Locations));
        data={"total":""+data.length+"","rows":data};
        $('#tblLocationPopUp').datagrid('loadData',data);
        $('#tblLocationPopUp').datagrid({selectOnCheck:false, checkOnSelect:false})
        if(_bMultipleItemReturn==false)
        {
          $('#tblLocationPopUp').datagrid('hideColumn','Selected');
          $('#tblLocationPopUp').datagrid({ onDblClickRow: function (rowIndex, rowData) { RowDoubleClickEvent(rowIndex, rowData); } });
        }
});

// Search From Text Box
$('#txtSearchByCode').keypress(function (e) {
         
        var userinput = String.fromCharCode(e.which);
        var txtSearchByCode = document.getElementById('txtSearchByCode').value;
        txtSearchByCode = txtSearchByCode + userinput;

        var bFlag = false;
        var sTempName = "";
        var rows = $('#tblLocationPopUp').datagrid('getRows');
        for (i = 0; i < rows.length; ++i) {
            sTempName = rows[i]['Name'].substring(0, txtSearchByCode.length);
            if (txtSearchByCode.toUpperCase() == sTempName.toUpperCase()) {
                bFlag = true;
                break;
            }
        }
        if (bFlag) {
            $('#tblLocationPopUp').datagrid('selectRow', i);
        }
    })

function RowDoubleClickEvent(rowIndex, oSelectedLocation)
    {
        
        if(oSelectedLocation==null)
        {
            alert("please select a Location");
            return;
        }
        var oReturnObject = oSelectedLocation;
        window.returnValue= oReturnObject;
        window.close();
    }

function Select()
{
    
     if(_bMultipleItemReturn==true)
       {
          var oSelectedLocations=[];
          var oSelectedLocations = $('#tblLocationPopUp').datagrid('getChecked');
          if(oSelectedLocations.length<=0)
           {
                alert("please select atleast one item");
                return;
           }
            window.returnValue= oSelectedLocations;
         }
         else
         {
             var oSelectedLocation= $('#tblLocationPopUp').datagrid('getSelected');
             if(oSelectedLocation==null)
             {
                    alert("please select a product");
                    return;
             }
             var oReturnObject = oSelectedLocation;
             window.returnValue= oReturnObject;
         }
         window.close();
    }


function Close()
{
   window.close();
}

</script>

