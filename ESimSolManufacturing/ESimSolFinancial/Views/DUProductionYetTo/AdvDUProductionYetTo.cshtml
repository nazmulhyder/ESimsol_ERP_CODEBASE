


<div class="modal-header">
    <h4 class="modal-title" id="modal-title" ng-bind="PickerTitle">Advance Search</h4>
</div>
<div class="modal-body regionSearch">
    <div id="progressbarParent" style="width:100%;height:100%;margin:0 auto;text-align:center; margin-left: auto;margin-right: auto;left: 0;right: 0;z-index: 1000;opacity:.9;">
        <div style="margin: 0px auto;margin-top: 251px;text-align:center;width:390px;">
            <label style="font-size:18px; color: black;">Please wait</label>
            <div id="progressbar" style="width:100%;height:17px; border-radius: 10px"></div>
        </div>
    </div>

    <fieldset style="margin-bottom: 0px;">
        <legend>Searching criterion</legend>
       

        <div class="row col-md-12">
            <div class="col-md-3 text-right"><label class="control-label">Order No:</label></div>
            <div class="col-md-9 text-left">
                <input type="text" class="form-control" ng-model="OrderNo" ng-keydown="SearchKeyDownLCNo($event)" placeholder="Type Order No ">
             </div>
        </div>

        <div class="row col-md-12">
            <div class="col-md-3 text-right"><label class="control-label">PI No:</label></div>
            <div class="col-md-9 text-left">

                <input type="text" class="form-control" ng-model="PINo" ng-keydown="SearchKeyDownPI($event)" placeholder="Type PI No ">

            </div>
        </div>


        <div class="row col-md-12">
            <div class="col-md-3 text-right"><label class="control-label">Order Date:</label></div>
            <div class="col-md-9 text-left">
                <div class="col-md-4 text-left">
                    <select class="form-control" ng-model="cboOrderDate" ng-change="OrderDateChange()" ng-options="item.id as item.Value for item in CompareOperators"></select>
                </div>
                <div class="col-md-8 text-left">
                    <div class="col-md-12">
                        <div class="input-group date date-container" style="width:43%;float:left">
                            <input type="text" class="form-control" ng-model="OrderDateStart"><span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
                        </div>
                        <div style="width:14%;float:inherit;">
                            <span class="input-group-addon" style="height:26px;"><span class="label label-primary">To</span></span>
                        </div>
                        <div class="input-group date date-container" style="width:43%;float:left">
                            <input type="text" class="form-control" ng-model="OrderDateEnd" ng-disabled="OrderDateEndDisabled"><span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row col-md-12">
            <div class="col-md-3 text-right"><label class="control-label"> Product:</label></div>
            <div class="col-md-9 text-left">
                <div class="input-group">
                    <input type="text" class="form-control" ng-model="ProductName" ng-keydown="SearchKeyDownProductName($event)" placeholder="Type Product Name & Press Enter">
                    <span class="input-group-btn">
                        <button type="button" class="btn btn-sm" aria-label="Left Align" ng-click="PickProduct()"> <span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
                    </span>
                </div>

            </div>
        </div>
        <div class="row col-md-12">
            <div class="col-md-3 text-right"><label class="control-label"> Buyer:</label></div>
            <div class="col-md-9 text-left">
                <div class="input-group">
                    <input type="text" class="form-control" ng-model="ContractorName" ng-keydown="SearchKeyDownBuyerName($event)" placeholder="Type Buyer Name & Press Enter">

                    <span class="input-group-btn">
                        <button type="button" class="btn btn-sm" aria-label="Left Align" ng-click="PickBuyer()"> <span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
                    </span>
                </div>
            </div>
        </div>

        <div class="row col-md-12">
            <div class="col-md-3 text-right"><label class="control-label">Order Type :</label></div>
            <div class="col-md-9 text-left">
                <div class="input-group">
                    <input type="text" class="form-control" ng-model="OrderTypeName" ng-keydown="SearchKeyDownOrderType($event)" placeholder="Select Order Type">

                    <span class="input-group-btn">
                        <button type="button" class="btn btn-sm" aria-label="Left Align" ng-click="PickOrderType()"> <span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
                    </span>
                    @*<div class="form-inline">
                <input type="checkbox" class="form-control" /> Sample Order
                <input type="checkbox" class="form-control" /> Bulk Order
                <input type="checkbox" class="form-control" /> Dyeing Order
                <input type="checkbox" class="form-control" /> Claim Order
            </div>*@
                    @*<select class="form-control" ng-model="OrderTypeID" ng-options="item.id as item.Value for item in OrderType"></select>*@
                </div>
             </div>
        </div>

        <div class="row col-md-12">
            <div class="col-md-3 text-right"><label class="control-label">Dyeing Type :</label></div>
            <div class="col-md-9 text-left">
                <select class="form-control" ng-model="DyeingTypeID" ng-options="item.id as item.Value for item in DyeingType">
                    <option value="">---Select One---</option>
                </select>
            </div>
        </div>
        <div class="row col-md-12">
            <div class="col-md-3 text-right"><label class="control-label"></label></div>
            <div class="col-md-9 text-left">
                <div class="input-group">
                    <input type="checkbox" ng-model="chkYetToProduction" /> Pending Production
                    <input type="checkbox" ng-model="chkYetToDelivery" /> Pending Delivery
                </div>
            </div>
        </div>


</fieldset>
</div>
<div class="modal-footer">
    <label ng-hide="lblLoadingMessage" style="float:left;color:green; ">Loading Please Wait...</label>
    <button class="btn btn-success" type="button" ng-click="reset()">Reset</button>
    <button class="btn btn-primary" type="button" ng-click="search()">Search</button>
    <button class="btn btn-warning" type="button" ng-click="closeAdvanceSearchModal()">Close</button>
</div>
