    {        
        alert("Please enter account no!");
        $('#txtAccountNo').focus();
        return false;
    }  
    if(document.getElementById("cboAccountType").value==null || document.getElementById("cboAccountType").selectedIndex<=0)
    {        
        alert("Please select account type!");
