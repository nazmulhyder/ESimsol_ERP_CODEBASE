
@model ESimSol.BusinessObjects.Currency
@{
    ViewBag.Title = "View Currency";
}
       
        <div class="PageHeading">  
           <table border="0">
                <tr>
                    <td style="width:900px" class="Headline"> View Currency</td>
                </tr>
            </table>
</div>    
        <div class="PageBody">
        <table border="0">
            <tr>
                <td style="width:50px"></td>
                <td style="width:800px">                           
                            <fieldset>
                                <legend style="font-weight:bold"> Currency Info : </legend>
                                <table border="0">
                                    <tr>
                                        <td>Currency Name</td>
                                        <td>:</td>
                                        <td>
                                                <div class="editor-field">
                                                @Html.TextBoxFor(model => model.CurrencyName, new { style = "width: 500px;", id = "txtCurrencyName", disabled="disabled" })            
                                                </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Issue Figure</td>
                                        <td>:</td>
                                        <td>
                                                <div class="editor-field">
                                                @Html.TextBoxFor(model => model.IssueFigure, new { style = "width: 500px;", id = "txtIssueFigure", disabled = "disabled" })            
                                                </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Currency Symbol</td>
                                        <td>:</td>
                                        <td>
                                                <div class="editor-field">
                                                @Html.TextBoxFor(model => model.Symbol, new { style = "width: 500px;", id = "txtSymbol", disabled = "disabled" })            
                                                </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Smaller Unit</td>
                                        <td>:</td>
                                        <td>
                                                <div class="editor-field">
                                                @Html.TextBoxFor(model => model.SmallerUnit, new { style = "width: 500px;", id = "txtSmallerUnit", disabled = "disabled" })            
                                                </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>SmUnit Value</td>
                                        <td>:</td>
                                        <td>
                                                <div class="editor-field">
                                                @Html.TextBoxFor(model => model.SmUnitValue, new { style = "width: 500px;", id = "txtSmUnitValue", disabled = "disabled" })            
                                                </div>
                                        </td>
                                    </tr>
                                    <tr>
                                       <td>Note</td>         
                                        <td>:</td>
                                        <td>
                                            <div class="editor-field">
                                                @Html.TextBoxFor(model => model.Note, new { style = "width: 500px;", id = "txtNote", disabled = "disabled" })            
                                            </div>
                                        </td>
                                    </tr>
                                     @Html.HiddenFor(model => model.CurrencyID);
                                     <tr>
                                        <td></td>
                                        <td></td>
                                        <td>
                                            
                                        </td>
                                    </tr>
                                </table>
                                </fieldset>                                

                
                    </td>
                <td style="width:50px"></td>
            </tr>
            <tr>
                 <td style="width:50px"></td>
                 <td style="width:800px">
                    <div style="color: red;font-weight:900; margin-top:10px">@TempData["message"]</div>
                 </td>
                 <td style="width:50px"></td>
            </tr>
        </table>     
        </div>

        <div class="PageFooter">
<div style="margin-left:20px;margin-right:20px">
    <table>
        <tr>                        
            <td style="width:800px; text-align:right">
                @Html.ActionLink("Back To Currency List", "RefreshList", "Currency")
            </td>
        </tr>
    </table>
    
</div>
</div>
  

