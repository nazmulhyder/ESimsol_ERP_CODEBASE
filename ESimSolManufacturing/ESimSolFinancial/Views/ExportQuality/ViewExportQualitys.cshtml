@{
    ViewBag.Title = "Delivery Order Names";
}
<!DOCTYPE html>
<html>
<head>
    <title>ExportQualitys</title>
</head>
<body>

    <div class="menuMainCollectionTable">
        <table id="tblExportQualitys" title="Delivery Order Names" class="easyui-datagrid" fit="true" fitcolumns="true" rownumbers="true" pagination="false" singleselect="true" autorowheight="false" toolbar="#toolbar">
            <thead>
                <tr>
                    <th field="Name" width="50%">Name</th>
                    <th field="IsFocSt" width="50%">Activity</th>
                    
                </tr>
            </thead>
        </table>
        <div id="toolbar">
            <table>
                <tr>
                    <td>
                        <input id="txtName" type="text" style="width: 230px;" placeholder="Type Description & Press Add Button" />
                        <a id="btnUpdate" href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-save" plain="true">Update</a>
                        <a id="btnAdd" href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-add" plain="true">New</a>
                        <a id="btnEdit" href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-edit" plain="true">Edit</a>
                        <a id="btnDelete" href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-remove" plain="true">Delete</a>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</body>
</html>
<script type="text/javascript">
    var _sBaseAddress="";
    var _oExportQualitys=[];
    var _oExportQuality=null;
    $(document).ready(function () {
        _sBaseAddress =@Html.Raw(new System.Web.Script.Serialization.JavaScriptSerializer().Serialize(HttpContext.Current.Session[SessionInfo.BaseAddress]));
        _oExportQualitys =@Html.Raw(new System.Web.Script.Serialization.JavaScriptSerializer().Serialize(Model));
        $("#btnUpdate").hide();
        DynamicRefreshList(_oExportQualitys,"tblExportQualitys");
           
    });
   
    function Validation()
    {
        if($.trim($("#txtName").val()) == "")
        {
            alert("Please Type Description and Press Add Button");
            $("#txtName").addClass("errorFieldBorder");
            $("#txtName").focus();
            return false;
        }else{
            $("#txtName").removeClass("errorFieldBorder");
        }
        
        return true;
    }

    function RefreshObject() {
        var oExportQuality = {
            ExportQualityID  : (_oExportQuality == null ? 0 : _oExportQuality.ExportQualityID),
            Name : $.trim($("#txtName").val()),
            Activity: true,
        };
        return oExportQuality;
    }

    $("#btnAdd").click(function(){
        _oExportQuality = null;
        AddNew();
    });

    $("#txtName").keydown(function(e){
        if(e.keyCode === 13)
        {
            _oExportQuality = null;
            AddNew();
        }
    });

    function AddNew()
    {
        if (!Validation())
        {
            return false;
        }
        else
        {
            var oExportQuality = RefreshObject();
            var obj = {
                BaseAddress: _sBaseAddress,
                Object: oExportQuality,
                ObjectId: oExportQuality.ExportQualityID,
                ControllerName: "ExportQuality",
                ActionName: "SaveExportQuality",
                TableId: "tblExportQualitys",
                IsWinClose: true,
                Message:""
            };
            $.icsSave(obj, function (response) {
                if (response.status && response.obj != null) {
                    if (response.obj.ExportQualityID > 0) {
                        $("#txtName").val("");
                        $("#txtName").focus();
                        $("#btnUpdate").hide();

                    }
                }
            });
        }
    }

    $("#btnDelete").click(function(){
        var oExportQuality = $("#tblExportQualitys").datagrid("getSelected");
        if(oExportQuality == null || oExportQuality.ExportQualityID <=0)
        {
            alert("Please select an item from list.");
            return;
        }

        if (!confirm("Confirm to Delete?")) return;
        var obj =
        {
            BaseAddress: _sBaseAddress,
            Object: oExportQuality,
            ControllerName: "ExportQuality",
            ActionName: "DeleteExportQuality",
            TableId: "tblExportQualitys",
            IsWinClose: false
        };
        $.icsDelete(obj);
    });

    $("#btnEdit").click(function(){
        var oExportQuality = $("#tblExportQualitys").datagrid("getSelected");
        if(oExportQuality == null || oExportQuality.ExportQualityID <=0)
        {
            alert("Please select an item from list.");
            return;
        }
        _oExportQuality = oExportQuality;
        $("#txtName").removeClass("errorFieldBorder");
        $("#txtName").val(oExportQuality.Name);
        $("#btnUpdate").show();
    });

    $("#btnUpdate").click(function(){
        AddNew();
    });
</script>
