<html>
@{
    ViewBag.title = "SoftWinding Info";
}
<body>
    @model ESimSol.BusinessObjects.DUSoftWinding
    <div class="menuMainCollectionTable panel-group" ng-app="CCategoryapp" ng-controller="CCategoryController" id="divCC" style="height:530px">
        <div class=" panel-primary" >
            <div style="height:490px;" class="panel-body regionDUSoftWinding">
                @*Order INFO*@
                <div style=" height:37%" class="regionDUSoftWinding">
                    <fieldset style="height:100%">
                        <legend>Order Info: </legend>
                        <div class="row col-md-12" style="padding-top:20px">
                            <div class="col-md-2 text-right"><label class="control-label">Order Type :</label></div>
                            <div class="col-md-3 text-left">
                                <input class="form-control" class="form-control" ng-model="DUSoftWinding.OrderType" disabled />
                            </div>
                            <div class="col-md-2 text-right"><label class="control-label">Order No :</label></div>
                            <div class="col-md-3 text-left">
                                <input class="form-control" class="form-control" ng-model="DUSoftWinding.DyeingOrderNo" disabled />
                            </div>
                            <div class="col-md-2 text-right"><label class="control-label">Date :</label></div>
                            <div class="col-md-3 text-left">
                                <div class="input-group date date-container">
                                    <input type="text" class="form-control" disabled ng-model="DUSoftWinding.OrderDateST">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
                                </div>
                            </div>
                        </div>
                        <div class="row col-md-12">
                            <div class="col-md-2 text-right"><label class="control-label">Product:</label></div>
                            <div class="col-md-3 text-left">
                                <input class="form-control" class="form-control" ng-model="DUSoftWinding.ProductName" disabled />
                            </div>
                            <div class="col-md-2 text-right"><label class="control-label">Raw Lot No :</label></div>
                            <div class="col-md-3 text-left">
                                <input class="form-control" class="form-control" ng-model="DUSoftWinding.LotNo" disabled />
                            </div>
                            <div class="col-md-2 text-right"><label class="control-label">Status :</label></div>
                            <div class="col-md-3 text-left">
                                <input class="form-control" class="form-control" ng-model="DUSoftWinding.StatusST" disabled />
                            </div>
                        </div>
                        <div class="row col-md-12">
                            <div class="col-md-2 text-right"><label class="control-label">Order Qty:</label></div>
                            <div class="col-md-3 text-left">
                                <input class="form-control" class="form-control" ng-model="DUSoftWinding.Qty_Order | number:2" disabled />
                            </div>
                            <div class="col-md-2 text-right"><label class="control-label">Receive Qty:</label></div>
                            <div class="col-md-3 text-left">
                                <input class="form-control" class="form-control" ng-model="DUSoftWinding.Qty | number:2" disabled />
                            </div>
                            <div class="col-md-2 text-right"><label class="control-label">Delivery Qty :</label></div>
                            <div class="col-md-3 text-left">
                                <input class="form-control" class="form-control" ng-model="DUSoftWinding.Qty_RSOut  | number:2" disabled />
                            </div>
                        </div>
                        <div class="row col-md-12">
                            <div class="col-md-2 text-right"><label class="control-label">Buyer :</label></div>
                            <div class="col-md-7 text-left">
                                <input class="form-control" class="form-control" ng-model="DUSoftWinding.ContractorName" disabled />
                            </div>
                            <div class="col-md-2 text-right"><label class="control-label">Receive Date :</label></div>
                            <div class="col-md-3 text-left">
                                <div class="input-group date date-container">
                                    <input type="text" class="form-control" disabled ng-model="DUSoftWinding.ReceiveDateST">
                                    <span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </div>
                @*Winding INFO*@
                <div style=" height:63%">
                    <fieldset style="height:100%">
                        <legend>Winding Info: </legend>

                        @*<div class="row col-md-12" style="padding-top:50px">
                            <div class="col-md-2 text-right"><label class="control-label">Start Date :</label></div>
                            <div class="col-md-3 text-left">
                                <div class="input-group date date-container1">
