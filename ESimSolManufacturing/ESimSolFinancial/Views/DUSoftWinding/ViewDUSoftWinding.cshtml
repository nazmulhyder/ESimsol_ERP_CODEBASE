<script type="text/javascript">
    //debugger;
    var oDUSoftWinding =@Html.Raw(new System.Web.Script.Serialization.JavaScriptSerializer().Serialize(Model));
    var viewType = sessionStorage.getItem("Operation");
    $('.date-container').datepicker({
        format: "dd M yyyy",
        showMeridian: true,
        calendarWeeks: true,
        autoclose: true,
        todayHighlight: true
    });

    //$('.date-container1').datetimepicker({
    //    format: "dd M yyyy HH:ii P",
    //    linkFormat: "yyyy-mm-dd hh:ii",
    //    showMeridian: true,
    //    calendarWeeks: true,
    //    autoclose: true,
    //    todayHighlight: true
    //});

    //$(".date-container1").datetimepicker(
    //    //{format: 'dd M yyyy hh:ii P'}
    //);

    //$(".date-container1").datetimepicker();

    var CCategoryApp = angular.module('CCategoryapp', ['ngAnimate', 'ui.bootstrap', 'ui.grid', 'ui.grid.selection', 'ui.grid.edit','ui.grid.resizeColumns','ui.grid.cellNav','ms.service']);
    CCategoryApp.controller('CCategoryController', function ($scope, $http, $uibModal, $log, uiGridConstants, msModal,icsMethod, userSession,msGridControl) {
        $scope.DUSoftWinding = oDUSoftWinding;

        $scope.Machines=@Html.Raw(new System.Web.Script.Serialization.JavaScriptSerializer().Serialize(ViewBag.Machines));
        $scope.RSShifts=@Html.Raw(new System.Web.Script.Serialization.JavaScriptSerializer().Serialize(ViewBag.RSShifts));
        $scope.GainLossTypes=@Html.Raw(new System.Web.Script.Serialization.JavaScriptSerializer().Serialize(ViewBag.GainLossTypes));
        
        debugger;
            if (viewType == 'View')
            {
                $scope.disabled= true;
                $scope.hide=true;
            }
            $scope.Save=function(nStatus)
            {
                debugger;
                //if(!$scope.ValidateInput()) return;
                if($scope.DUSoftWinding.StatusInt==3)
                {
                    alert("Production Is Already Completed !!");return;
                }
                if(nStatus==2 && $scope.DUSoftWinding.StatusInt==2)
                {
                    alert("Production Is Already Started !!");return;
                }
                if(nStatus==3 && $scope.DUSoftWinding.StatusInt!=2)
                {
                    alert("Production Is Not Started Yet !!");return;
                }

                var oDUSoftWinding=$scope.DUSoftWinding;
                oDUSoftWinding.ReceiveDate = new Date($scope.DUSoftWinding.ReceiveDateST);
                oDUSoftWinding.StartDate = new Date($scope.DUSoftWinding.StartDateST);
                oDUSoftWinding.EndDate = new Date($scope.DUSoftWinding.EndDateST);
                oDUSoftWinding.Status=nStatus; //Running:2, Completed:3
                var a =sessionStorage.getItem('BaseAddress');
                //alert(a);
                $http.post(sessionStorage.getItem('BaseAddress')+'/DUSoftWinding/Save',oDUSoftWinding).then(
                      function (response)
                      {
                          var oDUSoftWinding= jQuery.parseJSON(response.data);
                          if (oDUSoftWinding.ErrorMessage=="" || oDUSoftWinding.ErrorMessage==null)
                          {
                              alert("Data Saved Successfully!!");
                              userSession.setData('DUSoftWindings',oDUSoftWinding);
                              $scope.DUSoftWinding.StatusInt=nStatus;
                              $scope.DUSoftWinding.StatusST=oDUSoftWinding.StatusST;
                              if(nStatus!=2)
                              {
                                  userSession.previousPage();
                              }
                             
                          }
                          else
                          {
                              alert(oDUSoftWinding.ErrorMessage);
                          }
                      },
                          function (response) { alert(response.statusText);$scope.MeasurementUnits=[];}
                  );
            }
            $scope.ValidateInput = function()
            {
                debugger;
                if(($scope.DUSoftWinding.ColorCode==null || $scope.DUSoftWinding.ColorCode=="") && $scope.DUSoftWinding.ColorType!=3)
                {
                    alert("Please enter color code!");
                    return false;
                }
                if($scope.DUSoftWinding.ColorType<=0)
                {
                    alert("Please select color type!");
                    return false;
                }
                if($scope.DUSoftWinding.ColorName==null || $scope.DUSoftWinding.ColorName=="")
                {
                    alert("Please enter color name!");
                    return false;
                }
                return true;
            }
            if(sessionStorage.getItem("ColorHeader")=="View Vehicle Color")
            {
                $("#divCC :input").prop('disabled', true);
                $('#btnClose').prop('disabled', false);
            }
            $scope.Close = function()
            {
                window.location.href = sessionStorage.getItem("BackLink");
            }
            $scope.keydown = function(e)
            {
                if(e.which == 27)//escape=27
                {
                    //debugger;
                    window.location.href = sessionStorage.getItem("BackLink");
                }
            }
        });

</script>