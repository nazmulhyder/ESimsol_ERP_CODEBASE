function PrintList()
{
   
   var oProductionExecutionPlans= $('#tblProductionExecutionPlans').datagrid('getRows'); 
    var ids ="";
    if(oProductionExecutionPlans.length>0)
    {
        for(var i =0;i<oProductionExecutionPlans.length;i++)
