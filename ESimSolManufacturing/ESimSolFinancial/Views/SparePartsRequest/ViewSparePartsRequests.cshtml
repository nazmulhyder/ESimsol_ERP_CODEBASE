<script type="text/javascript">
    var _oPurchaseRequisition = null;
    var _sBaseAddress = "";
    var _oAuthorizationRolesMapping = [];
    var _oPurchaseRequisitionBranch = null;
    var _nID=null;
    var _nContractorIDs="";
    var _nDepartmentIDs="";
    var _sProductIDs="";
    $(document).ready(function() {
        debugger;
        var oPurchaseRequisitions = @Html.Raw(new System.Web.Script.Serialization.JavaScriptSerializer().Serialize(Model));
        _oAuthorizationRolesMapping = @Html.Raw(new System.Web.Script.Serialization.JavaScriptSerializer().Serialize(HttpContext.Current.Session[SessionInfo.AuthorizationRolesMapping]));
        _sBaseAddress = @Html.Raw(new System.Web.Script.Serialization.JavaScriptSerializer().Serialize(HttpContext.Current.Session[SessionInfo.BaseAddress]));
        var oCOs = @Html.Raw(new System.Web.Script.Serialization.JavaScriptSerializer().Serialize(ViewBag.COs));
        $('#cboPRDate').data('COs',oCOs);
        $('#cboPRDate').icsLoadCombo({List: oCOs,OptionValue: "id",DisplayText: "Value"});

        _nID =parseInt(sessionStorage.getItem("SelectedRowIndex"));
        var oTempPurchaseRequisitions =sessionStorage.getItem("PurchaseRequisitions");
        if(oTempPurchaseRequisitions!=null)
        {
            oTempPurchaseRequisitions = jQuery.parseJSON(oTempPurchaseRequisitions);
        }
        else
        {
            oTempPurchaseRequisitions=oPurchaseRequisitions;
        }

        DynamicRefreshList(oTempPurchaseRequisitions, 'tblPurchaseRequisitions');
        if(_nID!=-1)
        {
            $('#tblPurchaseRequisitions').datagrid('selectRow', _nID);
        }

        $('#tblPurchaseRequisitions').datagrid({onSelect: function(rowIndex, rowData){ RowSelect(rowData);}});
    });


    /*Department Picker*/
    $("#btnDepartmentPicker_Collection").click(function(e){
        debugger;
        DepartmentPicker("");
    });
    $("#txtDepartmentName").keydown(function(e)
    {
        var code = (e.keyCode ? e.keyCode : e.which);
        if (e.which == 13)//enter=13
        {
            DepartmentPicker($("#txtDepartmentName").val());
        }else if (code == 8) //backspace=8
        {
            //debugger;
            var txttProductName = document.getElementById("txtDepartmentName");
            txttProductName.style.color = "black";
            txttProductName.style.fontWeight = "normal";
            _nDepartmentIDs = "";
        }
    });

    function DepartmentPicker(DepartmentName)
    {
        debugger;
        var oTDepartment={id:1, text:DepartmentName};
        var obj = {
            BaseAddress: _sBaseAddress,
            Object: oTDepartment,
            ControllerName:"Department",
            ActionName: "getchildren",
            IsWinClose: false
        };

        $.icsDataGets(obj, function (response) {

            if (response.status && response.objs.length > 0) {
                if (response.objs[0].DepartmentID > 0) {
                    var tblColums = [];
                    var oColumn = { field: "Name", title: "Departmen tName", width: 230, align: "left" };tblColums.push(oColumn);
                    var bmultiplereturn=true;
                    var oPickerParam = {
                        winid: 'winDept',
                        winclass:'clsDept',
                        winwidth: 320,
                        winheight: 460,
                        tableid: 'tblDept',
                        tablecolumns: tblColums,
                        datalist: response.objs,
                        multiplereturn: bmultiplereturn,
                        searchingbyfieldName:'Name',
                        windowTittle: 'Department List'
                    };
                    $.icsPicker(oPickerParam);
                    IntializePickerbutton(oPickerParam);//multiplereturn, winclassName
                }
                else { alert(response.objs[0].ErrorMessage); }
            }
        });
    }

    function RowSelect(oNOAs)
    {
        debugger;
        ////Commercial Invoice Status:
        if(parseInt(oNOAs.ApproveBy)!=0)
        {
            document.getElementById("btnApproved").style.display = 'none';
        }
        if(parseInt(oNOAs.ApproveBy)==0)
        {
            document.getElementById("btnApproved").style.display = '';
        }
    }

    function RefreshArguments(){
        var sErrorMessage='Arguments;';

        var txtSearchbyCode=$("#txtSearchbyCode").val();
        if(txtSearchbyCode!=null)
        {
            sErrorMessage=sErrorMessage+txtSearchbyCode+'~';
        }
        var txtSearchByName=$("#txtSearchByName").val();
        if(txtSearchByName!=null)
        {
            sErrorMessage=sErrorMessage+txtSearchByName+'~';
        }
        return {ErrorMessage:sErrorMessage};
    }

    $('#btnPrintPurchaseRequisition').click(function(){
        var oPurchaseRequisitions=$('#tblPurchaseRequisitions').datagrid('getRows');
        if(oPurchaseRequisitions==null||oPurchaseRequisitions.length<=0){return false;}
        $("#txtPurchaseRequisitionCollectionList").val(JSON.stringify(oPurchaseRequisitions));
    });
    $("#btnAddPurchaseRequisition").click(function(){
        var oPurchaseRequisitions= $('#tblPurchaseRequisitions').datagrid('getRows');
        sessionStorage.setItem("PurchaseRequisitions", JSON.stringify(oPurchaseRequisitions));
        sessionStorage.setItem("SelectedRowIndex", -1);
        sessionStorage.setItem("PurchaseRequisitionHeader", "Add Spare Parts Request");
        sessionStorage.setItem("BackLink", window.location.href);
        window.location.href = _sBaseAddress+ "/SparePartsRequest/ViewSparePartsRequest?id=0";
    });
    $("#btnEditPurchaseRequisition").click(function(){
        var oPurchaseRequisition= $('#tblPurchaseRequisitions').datagrid('getSelected');
        if(oPurchaseRequisition==null || oPurchaseRequisition.PRID<=0)
        {
            alert("Please select a item from list!");
            return false;
        }
        if(oPurchaseRequisition.ApproveBy!=0)
        {
            alert("Selected item is already Approved!");
            return false;
        }
        if(oPurchaseRequisition.FinishByID!=0)
        {
            alert("Selected item is Finished!");
            return false;
        }
        if(oPurchaseRequisition.CancelByID!=0)
        {
            alert("Selected item is canceled!");
            return false;
        }

        var SelectedRowIndex=$('#tblPurchaseRequisitions').datagrid('getRowIndex',oPurchaseRequisition);
        var oPurchaseRequisitions= $('#tblPurchaseRequisitions').datagrid('getRows');
        sessionStorage.setItem("PurchaseRequisitions", JSON.stringify(oPurchaseRequisitions));
        sessionStorage.setItem("SelectedRowIndex", SelectedRowIndex);
        sessionStorage.setItem("PurchaseRequisitionHeader", "Edit  Spare Parts Request");
        sessionStorage.setItem("BackLink", window.location.href);
        window.location.href = _sBaseAddress+  "/SparePartsRequest/ViewSparePartsRequest?id="+oPurchaseRequisition.PRID;
    });
    $("#btnViewPurchaseRequisition").click(function(){
        var oPurchaseRequisition= $('#tblPurchaseRequisitions').datagrid('getSelected');
        if(oPurchaseRequisition==null || oPurchaseRequisition.PRID<=0)
        {
            alert("Please select a item from list!");
            return false;
        }
        var SelectedRowIndex=$('#tblPurchaseRequisitions').datagrid('getRowIndex',oPurchaseRequisition);
        var oPurchaseRequisitions= $('#tblPurchaseRequisitions').datagrid('getRows');
        sessionStorage.setItem("PurchaseRequisitions", JSON.stringify(oPurchaseRequisitions));
        sessionStorage.setItem("SelectedRowIndex", SelectedRowIndex);
        sessionStorage.setItem("PurchaseRequisitionHeader", "View  Spare Parts Request");
        sessionStorage.setItem("BackLink", window.location.href);
        window.location.href = _sBaseAddress+  "/SparePartsRequest/ViewSparePartsRequest?id="+oPurchaseRequisition.PRID;
    });
    $("#btnDeletePurchaseRequisition").click(function(){
        debugger;
        var oPurchaseRequisition= $('#tblPurchaseRequisitions').datagrid('getSelected');
        if(oPurchaseRequisition==null || oPurchaseRequisition.PRID<=0)
        {
            alert("Invalid Field!!! please select a valid Field!");
            return false;
        }
        if(oPurchaseRequisition.ApproveBy!=0)
        {
            alert("Selected item is already Approved!");
            return false;
        }
        if(oPurchaseRequisition.FinishByID!=0)
        {
            alert("Selected item is Finished!");
            return false;
        }
        if(oPurchaseRequisition.CancelByID!=0)
        {
            alert("Selected item is canceled!");
            return false;
        }
        if (!confirm("Confirm to Delete?")) return ;
        var SelectedRowIndex=$('#tblPurchaseRequisitions').datagrid('getRowIndex',oPurchaseRequisition);
        if (oPurchaseRequisition.PRID > 0)
        {
            $.icsDelete({
                BaseAddress: _sBaseAddress,
                Object: oPurchaseRequisition,
                ControllerName: "SparePartsRequest",
                ActionName: "Delete",
                TableId: "tblPurchaseRequisitions",
                IsWinClose: false
            });
        }
    });

    $("#btnApproved").click(function(){
        var oPurchaseRequisition= $('#tblPurchaseRequisitions').datagrid('getSelected');
        if(oPurchaseRequisition==null || oPurchaseRequisition.PRID<=0)
        {
            alert("Please select a item from list!");
            return false;
        }
        if(oPurchaseRequisition.ApproveBy!=0)
        {
            alert("Selected item is already Approved!");
            return false;
        }
        if(oPurchaseRequisition.CancelByID!=0)
        {
            alert("Selected item is canceled!");
            return false;
        }

        var SelectedRowIndex=$('#tblPurchaseRequisitions').datagrid('getRowIndex',oPurchaseRequisition);
        var oPurchaseRequisitions= $('#tblPurchaseRequisitions').datagrid('getRows');
        sessionStorage.setItem("PurchaseRequisitions", JSON.stringify(oPurchaseRequisitions));
        sessionStorage.setItem("SelectedRowIndex", SelectedRowIndex);
        sessionStorage.setItem("PurchaseRequisitionHeader", "Approve  Spare Parts Request");
        sessionStorage.setItem("BackLink", window.location.href);
        window.location.href = _sBaseAddress+  "/SparePartsRequest/ViewSparePartsRequest?id="+oPurchaseRequisition.PRID;
    });
    $("#btnFinished").click(function(){
        debugger;
        var oPurchaseRequisition= $('#tblPurchaseRequisitions').datagrid('getSelected');
        if(oPurchaseRequisition==null || oPurchaseRequisition.PRID<=0)
        {
            alert("Please select a item from list!");
            return false;
        }
        if(oPurchaseRequisition.FinishByID!=0)
        {
            alert("Selected item is already Finished!");
            return false;
        }
        if(oPurchaseRequisition.ApproveBy==0)
        {
            alert("Selected item is not Approved!");
            return false;
        }

        if(oPurchaseRequisition.CancelByID!=0)
        {
            alert("Selected item is canceled!");
            return false;
        }
        var SelectedRowIndex = $('#tblPurchaseRequisitions').datagrid('getRowIndex', oPurchaseRequisition);
        if (!confirm("Confirm to Finish?")) return ;

        $.ajax({
            type: "POST",
            dataType: "json",
            url : _sBaseAddress+"/SparePartsRequest/Finish",
            traditional: true,
            data:  JSON.stringify(oPurchaseRequisition),
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                debugger;
                var oPurchaseRequisition= jQuery.parseJSON(data);
                if (oPurchaseRequisition.ErrorMessage=="" || oPurchaseRequisition.ErrorMessage==null)
                {

                    alert("Requisition Finished Succesfully!!");
                    if(oPurchaseRequisition.PRID>0)
                    {
                        $('#tblPurchaseRequisitions').datagrid('updateRow', { index: SelectedRowIndex, row: oPurchaseRequisition });

                    }

                }
                else
                {
                    alert(oPurchaseRequisition.ErrorMessage);

                }
            },
            error: function (xhr, status, error)
            {
                alert(error);
            }
        });
    });

    $("#btnCanceled").click(function(){
        debugger;
        var oPurchaseRequisition= $('#tblPurchaseRequisitions').datagrid('getSelected');
        if(oPurchaseRequisition==null || oPurchaseRequisition.PRID<=0)
        {
            alert("Please select a item from list!");
            return false;
        }
        if(oPurchaseRequisition.FinishByID!=0)
        {
            alert("Selected item is already Finished!");
            return false;
        }

        var SelectedRowIndex = $('#tblPurchaseRequisitions').datagrid('getRowIndex', oPurchaseRequisition);
        if (!confirm("Confirm to Finish?")) return ;

        $.ajax({
            type: "POST",
            dataType: "json",
            url : _sBaseAddress+"/SparePartsRequest/Cancel",
            traditional: true,
            data:  JSON.stringify(oPurchaseRequisition),
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                debugger;
                var oPurchaseRequisition= jQuery.parseJSON(data);
                if (oPurchaseRequisition.ErrorMessage=="" || oPurchaseRequisition.ErrorMessage==null)
                {
                    alert("Requisition Canceled Succesfully!!");
                    if(oPurchaseRequisition.PRID>0)
                    {
                        $('#tblPurchaseRequisitions').datagrid('updateRow', { index: SelectedRowIndex, row: oPurchaseRequisition });
                    }
                }
                else
                {
                    alert(oPurchaseRequisition.ErrorMessage);

                }
            },
            error: function (xhr, status, error)
            {
                alert(error);
            }
        });
    });

