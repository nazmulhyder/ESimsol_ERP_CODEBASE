<html>
@{
    ViewBag.title = "ServiceWork";
}
<body>
    @model ESimSol.BusinessObjects.ServiceWork
    <div class="menuMainCollectionTable panel-group" ng-app="CCategoryapp" ng-controller="CCategoryController" id="divCC" style="height:530px">
        <div class=" panel-primary" >
        <div style="height:490px;" class="panel-body regionServiceWork">
            <fieldset style=" height:100%; text-align:center;">
                <legend style="font-weight:bold;">Basic Info : </legend>
                <table border="0" cellspacing="2" cellpadding="2" style="font-size:11px; font-weight:bold; text-align:center; width:90%; margin:150px 90px 0 -40px">

                    <tr>
                        <td style="width:15%; text-align:right">
                            Service Code :
                        </td>
                        <td style="width:35%">
                            <input type="text" ng-model="ServiceWork.ServiceCode" class="form-control" style="width:100%" />
                        </td>

                        <td style="width:15%; text-align:right">
                            Service Type :
                        </td>
                        <td style="width:35%">
                            <select ng-model="ServiceWork.ServiceType" class="form-control" ng-options="oItem.id as oItem.Value for oItem in ServiceTypes" style="width:100%"></select>
                        </td>
                    </tr>

                    <tr>
                        <td style="width:15%; text-align:right">
                           Service Name :
                        </td>
                        <td style="width:85%;" colspan="3">
                            <input type="text" ng-model="ServiceWork.ServiceName" class="form-control" style="width:100%" />
                        </td>
                    </tr>
                    <tr>
                        <td style="width:30%; text-align:right">
                            Remarks :
                        </td>
                        <td style="width:85%;" colspan="3">
                            <input type="text" ng-model="ServiceWork.Remarks" class="form-control" style="width:100%" />
                        </td>
                    </tr>
                </table>
            </fieldset>
        </div>
        <fieldset>
            <legend style="font-weight:bold"> Action : </legend>
            <table border="0" cellspacing="2" cellpadding="2" style="font-size:11px; font-weight:bold; width:100%;">
                <tr>
                    <td style="width:100%;text-align:right">
                        <button type="button" id="btnSave" class="btn btn-default btn-sm btn-success" aria-label="right Align" ng-click="Save()"><span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"> Save</span></button>
                        <button type="button" id="btnClose" class="btn btn-default btn-sm btn-danger" aria-label="right Align" ng-click="Close()"><span class="glyphicon glyphicon-remove" aria-hidden="true"> Close</span></button>
                    </td>
                </tr>
            </table>
        </fieldset>
    </div>
            
        </div>
</body>
</html>
<style type="text/css">
    .regionServiceWork .form-horizontal .control-label {
        padding-top: 1px;
    }

    .regionServiceWork .form-control {
        height: 26px;
        padding: 0px 6px;
        font-size: 12px;
        width:100%;
    }
</style>


<script type="text/javascript">
    //debugger;
    var oServiceWork =@Html.Raw(new System.Web.Script.Serialization.JavaScriptSerializer().Serialize(Model));
    var oCurrencyList =@Html.Raw(new System.Web.Script.Serialization.JavaScriptSerializer().Serialize(ViewBag.CurrencyList));
    var oServiceTypes =@Html.Raw(new System.Web.Script.Serialization.JavaScriptSerializer().Serialize(ViewBag.ServiceWorkTypes));
    var CCategoryApp = angular.module('CCategoryapp', ['ngAnimate', 'ui.bootstrap', 'ui.grid', 'ui.grid.selection', 'ui.grid.edit','ui.grid.resizeColumns','ui.grid.cellNav','ms.service']);
    CCategoryApp.controller('CCategoryController', function ($scope, $http, $uibModal, $log, uiGridConstants, msModal,icsMethod, userSession,msGridControl) {
            $scope.ServiceWork = oServiceWork;
            $scope.CurrencyList = oCurrencyList;
            $scope.ServiceTypes = oServiceTypes;
            $scope.Save=function()
            {
                debugger;
                if(!$scope.ValidateInput()) return;
                var oServiceWork=$scope.ServiceWork;
                $http.post(sessionStorage.getItem('BaseAddress')+'/ServiceWork/Save',oServiceWork).then(
                      function (response)
                      {
                          var oServiceWork= jQuery.parseJSON(response.data);
                          if (oServiceWork.ErrorMessage=="" || oServiceWork.ErrorMessage==null)
                          {
                              alert("Data Saved Successfully!!");
                              userSession.setData('ServiceWorks',oServiceWork);
                              userSession.previousPage();
                          }
                          else
                          {
                              alert(oServiceWork.ErrorMessage);
                          }

                      },
                          function (response) { alert(jQuery.parseJSON(response.data).Message);$scope.MeasurementUnits=[];}
                  );
            }
            $scope.ValidateInput = function()
            {
                debugger;
                //if(($scope.ServiceWork.ServiceCode==null || $scope.ServiceWork.ServiceCode==""))
                //{
                //    alert("Please enter Service code!");
                //    return false;
                //}
                if($scope.ServiceWork.ServiceType<=0)
                {
                    alert("Please select Service type!");
                    return false;
                }
                if($scope.ServiceWork.ServiceName==null || $scope.ServiceWork.ServiceName=="")
                {
                    alert("Please enter Service name!");
                    return false;
                }
                return true;
            }
            if(sessionStorage.getItem("ServiceHeader")=="View Vehicle Service")
            {
                $("#divCC :input").prop('disabled', true);
                $('#btnClose').prop('disabled', false);
            }
            $scope.Close = function()
            {
                window.location.href = sessionStorage.getItem("BackLink");
            }
            $scope.keydown = function(e)
            {
                if(e.which == 27)//escape=27
                {
                    //debugger;
                    window.location.href = sessionStorage.getItem("BackLink");
                }
            }
        });

</script>