    //function OperationPerforms(rowIndex, rowData)
    //{
    //    if (rowData != null && rowData.FNProductionID > 0)
    //    {
    //        debugger;
    //        if (rowData.ApprovedBy!=0 )  //Initialized = 1,
    //        {
    //            $('#btnEdit,#btnDelete,#btnApprove').hide();
    //        }
           
