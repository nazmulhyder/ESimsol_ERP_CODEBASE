@using ESimSol.BusinessObjects;
@model  AttendanceDaily
<br />
<table>
    <tr>
        <td width="100%" style="text-align: center; font-size: 10px; font-weight: bold">
            <u>Akij Textile Mills Limited</u>
        </td>
    </tr>
    <tr>
        <td width="100%" style="text-align: center; font-size: 10px; font-weight: bold">
            <u>Address : @Model.AttendanceDailys[0].LocationName, Manik Gonj </u>
        </td>
    </tr>
    <tr>
        <td width="100%" style="text-align: center; font-size: 10px; font-weight: bold">
            <u>Monthly Attendance Report </u>
        </td>
    </tr>
</table>
<br />
<table style="font-size: 8px; font-weight: bold">
    <tr>
        <td>
            <label>
                Name:@Model.AttendanceDailys[0].EmployeeNameCode</label><br />
            <label>
                Department:@Model.DepartmentName</label><br />
                <label>
                Month:@Model.ErrorMessage</label><br />
            <label>
                Print Date:@DateTime.Now</label><br />
        </td>
    </tr>
</table>
<br />
<table cellpadding="3" cellspacing="3" style="font-size: 7px">
    @{
        int nSLNo = 0;
       
    }
    <tr border="1" bgcolor="#DEDEDE">
        <td style="text-align: center;" width="4%">
            <strong>SL No</strong>
        </td>
        <td style="text-align: center;" width="12%">
            <strong>Employee Name</strong>
        </td>
        <td style="text-align: center;" width="8%">
            <strong>Designation</strong>
        </td>
        <td style="text-align: center;" width="10%">
            <strong>Type Of Employee</strong>
        </td>
        <td style="text-align: center;" width="8%">
            <strong>Total working Day</strong>
        </td>
        <td style="text-align: center;" width="8%">
            <strong>Total Shift </strong>
        </td>
        <td style="text-align: center;" width="8%">
            <strong>Total Working Hour </strong>
        </td>
        <td style="text-align: center;" width="8%">
            <strong>Present Shift </strong>
        </td>
        <td style="text-align: center;" width="6%">
            <strong>Absent Shift </strong>
        </td>
        <td style="text-align: center;" width="6%">
            <strong>Day Off </strong>
        </td>
        <td style="text-align: center;" width="6%">
            <strong>Leave </strong>
        </td>
        <td style="text-align: center;" width="6%">
            <strong>Paid </strong>
        </td>
        <td style="text-align: center;" width="8%">
            <strong>InWorkPlace </strong>
        </td>
        <td style="text-align: center;" width="8%">
            <strong>OSD</strong>
        </td>
        <td style="text-align: center;" width="8%">
            <strong>Suspended </strong>
        </td>
        <td style="text-align: center;" width="8%">
            <strong>Holiday </strong>
        </td>
        <td style="text-align: center;" width="8%">
            <strong>Late </strong>
        </td>
        <td style="text-align: center;" width="8%">
            <strong>Early Leaving </strong>
        </td>
        <td style="text-align: center;" width="8%">
            <strong>OvertimeInhour </strong>
        </td>
    </tr>
    @foreach (AttendanceDaily oAttendanceDaily in Model.AttendanceDailys)
    {

        nSLNo++;
        <tr border="1">
            <td style="text-align: right;">
                @nSLNo.ToString()
            </td>
            <td style="text-align: right;">
                @oAttendanceDaily.EmployeeNameCode
            </td>
            <td style="text-align: left;">
                @oAttendanceDaily.DesignationName
            </td>
            <td style="text-align: left;">
                @oAttendanceDaily.EmployeeTypeName
            </td>
            <td style="text-align: right;">
                @oAttendanceDaily.TotalWorkingDay
            </td>
            <td style="text-align: right;">
                @oAttendanceDaily.TotalShift
            </td>
            <td style="text-align: right;">
                @oAttendanceDaily.TotalWorkingHour
            </td>
            <td style="text-align: right;">
                @oAttendanceDaily.PresentShift
            </td>
            <td style="text-align: right;">
                @oAttendanceDaily.AbsentShift
            </td>
            <td style="text-align: right;">
                @oAttendanceDaily.IsDayOff
            </td>
            <td style="text-align: right;">
                @oAttendanceDaily.Leave
            </td>
            <td style="text-align: right;">
                @oAttendanceDaily.Paid
            </td>
            <td style="text-align: right;">
                @oAttendanceDaily.InWorkPlace
            </td>
            <td style="text-align: right;">
                @oAttendanceDaily.OSD
            </td>
            <td style="text-align: right;">
                @oAttendanceDaily.Suspended
            </td>
            <td style="text-align: right;">
                @oAttendanceDaily.Holiday
            </td>
            <td style="text-align: right;">
                @oAttendanceDaily.Late
            </td>
            <td style="text-align: right;">
                @oAttendanceDaily.EarlyLeaving
            </td>
            <td style="text-align: right;">
                @oAttendanceDaily.OvertimeInhour
            </td>
        </tr>
         
    }
</table>
